# ==============================================================================
# Solomon Electric - Apache .htaccess Configuration
# https://247electricianmiami.com
# ==============================================================================

# Hostinger - Force index.html as default document
DirectoryIndex index.html index.htm

# Error pages
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# ==============================================================================
# URL CANONICALIZATION - Critical for SEO
# ==============================================================================

# Enable RewriteEngine
RewriteEngine On

# 1. Force HTTPS (canonical protocol)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 2. Remove www prefix (canonical: non-www)
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# 3. Add trailing slash to directories (SEO consistency)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !(.*)/$
RewriteCond %{REQUEST_URI} !\.(html|xml|txt|json|ico|png|jpg|jpeg|gif|svg|css|js|woff|woff2|ttf|eot|webp|avif)$
RewriteRule ^(.*)$ $1/ [L,R=301]

# 4. Remove .html extensions (clean URLs)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# ==============================================================================
# SUBDOMAIN HANDLING
# ==============================================================================

# Redirect any subdomains to main domain (consolidate authority)
# Uncomment if needed:
# RewriteCond %{HTTP_HOST} ^([^.]+)\.247electricianmiami\.com$ [NC]

# ==============================================================================
# AMP URL CLEANUP - Strip AMP query params and redirect to clean URLs
# ==============================================================================

<IfModule mod_rewrite.c>
RewriteEngine On

# Remove ?amp=1 and similar AMP query parameters
RewriteCond %{QUERY_STRING} (^|&)amp=1(&|$) [NC]
RewriteRule ^(.*)$ /$1? [R=301,L]

# Remove ?is_otto_page_fetch query parameters
RewriteCond %{QUERY_STRING} is_otto_page_fetch [NC]
RewriteRule ^(.*)$ /$1? [R=301,L]

# Remove ?noamp=mobile query parameters
RewriteCond %{QUERY_STRING} noamp=mobile [NC]
RewriteRule ^(.*)$ /$1? [R=301,L]
</IfModule>

# ==============================================================================
# WORDPRESS LEGACY CLEANUP - Return 410 Gone for old WP paths
# ==============================================================================

<IfModule mod_rewrite.c>
# WordPress paths that no longer exist - return 410 Gone
RewriteRule ^wp-content/ - [G,L]
RewriteRule ^wp-admin/ - [G,L]
RewriteRule ^wp-includes/ - [G,L]
RewriteRule ^wp-.*\.php$ - [G,L]
</IfModule>


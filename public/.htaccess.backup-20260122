# ==============================================================================
# Solomon Electric - Apache .htaccess Configuration
# https://www.247electricianmiami.com
# ==============================================================================

# Hostinger - Force index.html as default document
DirectoryIndex index.html index.htm

# Error pages
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# ==============================================================================
# SITEMAP & XML FILE HANDLING - Ensure sitemaps are accessible to search engines
# ==============================================================================

# Set correct MIME type for XML files
<IfModule mod_mime.c>
    AddType application/xml .xml
    AddType text/xml .xml
</IfModule>

# Explicitly allow access to sitemap files (override any blocking rules)
# Also disable CDN caching to ensure fresh sitemaps are served
<FilesMatch "^sitemap.*\.xml$">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Allow from all
    </IfModule>
    <IfModule mod_headers.c>
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </IfModule>
</FilesMatch>

# ==============================================================================
# URL CANONICALIZATION - Critical for SEO
# ==============================================================================

# Enable RewriteEngine
RewriteEngine On

# 1. Force HTTPS (canonical protocol)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 2. Add www prefix (canonical: www)
RewriteCond %{HTTP_HOST} ^247electricianmiami\.com$ [NC]
RewriteRule ^(.*)$ https://www.247electricianmiami.com/$1 [R=301,L]

# 3. Add trailing slash to directories (SEO consistency)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !(.*)/$
RewriteCond %{REQUEST_URI} !\.(html|xml|txt|json|ico|png|jpg|jpeg|gif|svg|css|js|woff|woff2|ttf|eot|webp|avif)$
RewriteRule ^(.*)$ $1/ [L,R=301]

# 4. Remove .html extensions (clean URLs)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# ==============================================================================
# SUBDOMAIN HANDLING
# ==============================================================================

# Redirect any subdomains to main domain (consolidate authority)
# Uncomment if needed:
# RewriteCond %{HTTP_HOST} ^([^.]+)\.247electricianmiami\.com$ [NC]
# RewriteCond %{HTTP_HOST} !^www\. [NC]
# RewriteRule ^(.*)$ https://247electricianmiami.com/$1 [R=301,L]

# ==============================================================================
# SECURITY HEADERS
# ==============================================================================

<IfModule mod_headers.c>
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # HTTP Strict Transport Security (HSTS)
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Referrer Policy (SEO-friendly: sends referrer for analytics)
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Permissions Policy
    Header set Permissions-Policy "geolocation=(self), microphone=(), camera=()"
    
    # Content Security Policy - Production-ready CSP
    # Includes: GTM, Google Analytics, Google Maps, Microsoft Clarity, Search Atlas
    # Content Security Policy - Production-ready CSP
    # Includes: GTM, GA4, Google Maps, Microsoft Clarity (all domains), Search Atlas, reCAPTCHA
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com https://www.google.com https://www.gstatic.com https://maps.googleapis.com https://www.clarity.ms https://j.clarity.ms https://seo.gettmarketing.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: https: blob:; connect-src 'self' https://www.google-analytics.com https://analytics.google.com https://region1.google-analytics.com https://*.clarity.ms https://c.bing.com https://api.dataforseo.com https://maps.googleapis.com https://seo.gettmarketing.com; worker-src 'self' blob: https://www.clarity.ms; frame-src https://www.google.com https://maps.google.com https://www.recaptcha.net; frame-ancestors 'self'; base-uri 'self'; form-action 'self' https://api.smtp2go.com;"
</IfModule>

# ==============================================================================
# PERFORMANCE - GZIP COMPRESSION
# ==============================================================================

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css
    AddOutputFilterByType DEFLATE text/javascript application/javascript application/x-javascript
    AddOutputFilterByType DEFLATE application/json application/xml application/xhtml+xml
    AddOutputFilterByType DEFLATE image/svg+xml image/x-icon
    AddOutputFilterByType DEFLATE font/opentype font/truetype font/woff font/woff2
</IfModule>

# ==============================================================================
# BROWSER CACHING
# ==============================================================================

<IfModule mod_expires.c>
    ExpiresActive On
    
    # Default expiration
    ExpiresDefault "access plus 1 month"
    
    # HTML - short cache for fresh content
    ExpiresByType text/html "access plus 1 hour"
    
    # CSS/JS - longer cache with versioning
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    
    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/avif "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # Fonts
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # Data files (sitemap, etc)
    ExpiresByType application/xml "access plus 1 hour"
    ExpiresByType application/json "access plus 1 hour"
</IfModule>

# ==============================================================================
# PROTECT SENSITIVE FILES
# ==============================================================================

<Files "env.php">
    Require all denied
</Files>

<Files ".env">
    Require all denied
</Files>

# Block credential and config JSON files (specific patterns only)
<FilesMatch "^(gsc-credentials|.*-credentials|package|package-lock|tsconfig|.*\.config)\.json$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</FilesMatch>

# Explicitly allow public JSON files
<FilesMatch "^(manifest|schema)\.json$">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
</FilesMatch>


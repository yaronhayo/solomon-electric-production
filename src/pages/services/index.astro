---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import heroImage from "../../assets/images/heroes/services.png";
import PageHero from "../../components/PageHero.astro";
import Container from "../../components/ui/Container.astro";
import CtaButton from "../../components/ui/CtaButton.astro";
import FAQAccordion from "../../components/FAQAccordion.astro";
import ReviewCarousel from "../../components/ReviewCarousel.astro";
import {
    getServices,
    serviceCategories,
    getCategoryInfo,
    categoryDescriptions,
} from "../../utils/services";
import { SITE_CONFIG } from "../../config/site";
import Breadcrumb from "../../components/Breadcrumb.astro";

const services = await getServices();

// Pre-fetch category info
const categoryInfos = await Promise.all(
    serviceCategories.map((cat) => getCategoryInfo(cat)),
);
const categoryInfoMap = serviceCategories.reduce(
    (acc, cat, idx) => {
        acc[cat] = categoryInfos[idx];
        return acc;
    },
    {} as Record<string, (typeof categoryInfos)[0]>,
);

// Count services per category
const serviceCounts = serviceCategories.reduce(
    (acc, cat) => {
        acc[cat] = services.filter((s) => s.category === cat).length;
        return acc;
    },
    {} as Record<string, number>,
);

// Get services grouped by category for expanded display
const servicesByCategory = serviceCategories.reduce(
    (acc, cat) => {
        acc[cat] = services.filter((s) => s.category === cat);
        return acc;
    },
    {} as Record<string, typeof services>,
);

// Generate ItemList schema for all services (SEO)
const servicesListSchema = {
    "@context": "https://schema.org",
    "@type": "ItemList",
    numberOfItems: services.length,
    itemListElement: services.map((service, index) => ({
        "@type": "ListItem",
        position: index + 1,
        item: {
            "@type": "Service",
            name: service.name,
            description: service.description,
            url: `${SITE_CONFIG.seo.siteUrl}/services/${service.slug}`,
            provider: {
                "@type": "LocalBusiness",
                name: "Solomon Electric",
            },
        },
    })),
};

const breadcrumbSchema = {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: [
        {
            "@type": "ListItem",
            position: 1,
            name: "Home",
            item: SITE_CONFIG.seo.siteUrl,
        },
        {
            "@type": "ListItem",
            position: 2,
            name: "Services",
            item: `${SITE_CONFIG.seo.siteUrl}/services`,
        },
    ],
};

import {
    Phone,
    Calendar,
    ArrowRight,
    ClipboardCheck,
    Zap,
    Shield,
    Clock,
    Award,
    CheckCircle,
    Users,
} from "lucide-astro";

---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import { IMAGES } from "../../config/images";
import PageHero from "../../components/PageHero.astro";
import Container from "../../components/ui/Container.astro";
import CtaButton from "../../components/ui/CtaButton.astro";
import FAQAccordion from "../../components/FAQAccordion.astro";
import ReviewCarousel from "../../components/ReviewCarousel.astro";
import {
    getServices,
    serviceCategories,
    getCategoryInfo,
} from "../../utils/services";
import { SITE_CONFIG } from "../../config/site";
import Breadcrumb from "../../components/Breadcrumb.astro";
import {
    generateOfferCatalogSchema,
    type ServiceOffer,
} from "../../utils/schemas/offer-catalog";
import { generateHurricaneSeasonSchema } from "../../utils/schemas/event-schema";

const services = await getServices();

// Pre-fetch category info
const categoryInfos = await Promise.all(
    serviceCategories.map((cat) => getCategoryInfo(cat)),
);
const categoryInfoMap = serviceCategories.reduce(
    (acc, cat, idx) => {
        acc[cat] = categoryInfos[idx];
        return acc;
    },
    {} as Record<string, (typeof categoryInfos)[0]>,
);

// Convert services to ServiceOffer format for OfferCatalog schema
const serviceOffers: ServiceOffer[] = services.map((service) => ({
    name: service.name,
    slug: service.slug,
    description: service.description,
    category: service.category || "Electrical Services",
    priceRange: "Call for quote",
}));

// Generate OfferCatalog schema for rich pricing display
const offerCatalogSchema = generateOfferCatalogSchema(serviceOffers, {
    includeProvider: true,
    // Note: aggregateRating removed - Google requires first-party review data
});

// Generate Hurricane Season Event schema (June-November)
const currentYear = new Date().getFullYear();
const hurricaneEventSchema = generateHurricaneSeasonSchema(currentYear);

// Generate ItemList schema for all services (SEO)
const servicesListSchema = {
    "@context": "https://schema.org",
    "@type": "ItemList",
    numberOfItems: services.length,
    itemListElement: services.map((service, index) => ({
        "@type": "ListItem",
        position: index + 1,
        item: {
            "@type": "Service",
            name: service.name,
            description: service.description,
            url: `${SITE_CONFIG.seo.siteUrl}/services/${service.slug}`,
            provider: {
                "@id": `${SITE_CONFIG.seo.siteUrl}/#organization`,
            },
        },
    })),
};

const breadcrumbSchema = {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: [
        {
            "@type": "ListItem",
            position: 1,
            name: "Home",
            item: SITE_CONFIG.seo.siteUrl,
        },
        {
            "@type": "ListItem",
            position: 2,
            name: "Services",
            item: `${SITE_CONFIG.seo.siteUrl}/services`,
        },
    ],
};

import {
    Phone,
    Calendar,
    ArrowRight,
    Zap,
    Shield,
    Clock,
    Award,
} from "lucide-astro";
---

<Layout
    title="Electrical Services Miami | 63+ Services | Solomon"
    description="Complete electrical services in Miami-Dade & Broward. Panel upgrades, EV chargers, lighting, emergency repairs & more. Free estimates!"
    ogImage={`${SITE_CONFIG.seo.siteUrl}/og-default.webp`}
    ogImageAlt="Solomon Electric Services - 63+ Professional Electrical Services in Miami"
>
    <!-- SEO Schema -->
    <script
        type="application/ld+json"
        set:html={JSON.stringify(servicesListSchema)}
    />
    <script
        type="application/ld+json"
        set:html={JSON.stringify(breadcrumbSchema)}
    />
    <!-- OfferCatalog for pricing display in search results -->
    <script
        type="application/ld+json"
        set:html={JSON.stringify(offerCatalogSchema)}
    />
    <!-- Hurricane Season Event (June-November) -->
    <script
        type="application/ld+json"
        set:html={JSON.stringify(hurricaneEventSchema)}
    />

    <!-- Breadcrumb Navigation -->
    <Breadcrumb items={[{ label: "Home", href: "/" }, { label: "Services" }]} />

    <!-- Hero Section -->
    <PageHero
        title="Electrical Services Miami<br><span class='text-transparent bg-clip-text bg-gradient-to-r from-accent to-white'>Panel Upgrades, EV Chargers & Repairs</span>"

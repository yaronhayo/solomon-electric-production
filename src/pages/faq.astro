<Layout
    title="Electrician FAQ Miami | Common Questions Answered | Solomon Electric"
    description="Get answers to 72+ common electrical questions. Panel upgrades, EV chargers, emergency repairs, costs & more. Licensed Miami electrician answers your questions."
>
    <!-- FAQPage Schema Markup -->
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

    <!-- Breadcrumb Navigation -->
    <Breadcrumb items={[
        { label: "Home", href: "/" },
        { label: "FAQ" }
    ]} />

    <!-- Hero -->
    <PageHero
        title="Miami Electrician FAQ<br/><span class='text-transparent bg-clip-text bg-gradient-to-r from-accent to-white'>72+ Questions Answered</span>"
        subtitle="Panel Upgrades • EV Chargers • Emergency Repairs • Costs"
        description="How much does a panel upgrade cost? Do I need a permit for an EV charger? When should I call an emergency electrician? Get answers to common electrical questions from Miami's licensed electricians—so you can make informed decisions about your home's safety."
        image={heroImage}
    />

    <!-- SEO Intro Section -->
    <section id="faq-intro" aria-labelledby="intro-heading" class="seo-intro">
        <Container>
            <div class="seo-intro-content">
                <div class="seo-intro-text">
                    <h2 id="intro-heading" class="seo-intro-title">
                        Common Electrical Questions for <span class="text-accent">Miami Homeowners</span>
                    </h2>
                    <p class="seo-intro-description">
                        Browse our {faqs.length} most frequently asked questions about electrical services 
                        in Miami-Dade and Broward counties. From panel upgrades to EV charger installation, 
                        emergency repairs to smart home wiring—we've compiled expert answers from 
                        licensed electricians to help you understand your options.
                    </p>
                    <p class="seo-intro-secondary">
                        Solomon Electric (FL License #{SITE_CONFIG.credentials.license.number.replace('#', '')}) 
                        has completed 19,400+ electrical projects since 2008. Can't find your answer? 
                        Call (786) 833-9211 for personalized help—we're available 24/7.
                    </p>
                </div>
                <div class="seo-intro-stats">
                    <div class="intro-stat-item">
                        <MessageSquare class="intro-stat-icon" />
                        <span class="intro-stat-value">{faqs.length}</span>
                        <span class="intro-stat-label">Questions</span>
                    </div>
                    <div class="intro-stat-item">
                        <Phone class="intro-stat-icon" />
                        <span class="intro-stat-value">24/7</span>
                        <span class="intro-stat-label">Available</span>
                    </div>
                </div>
            </div>
        </Container>
    </section>

    <!-- FAQ Section -->
    <section id="faq-list" aria-labelledby="faq-list-heading" class="faq-section">
        <!-- Decorative Background Elements -->
        <div class="faq-bg-decorations">
            <div class="decoration-top"></div>
            <div class="decoration-bottom"></div>
        </div>

        <Container class="relative z-10">
            <!-- Section Header - Consistent with Services Page -->
            <header class="section-header">
                <span class="section-label">Electrician FAQ Miami</span>
                <h2 id="faq-list-heading" class="section-title">
                    Panel Upgrades, EV Chargers, <span class="text-accent">Emergency Repairs</span>
                </h2>
                <p class="section-description">
                    Expert answers from Miami's licensed electricians. Click any 
                    question to learn more about electrical services and costs.
                </p>
            </header>

            <div id="faq-container" class="faq-grid">
                {
                    faqs.map((faq, index) => (
                        <div class={`faq-item ${index >= 12 ? 'hidden' : ''}`} data-index={index}>
                            <!-- Accent stripe -->
                            <div class="faq-accent-stripe"></div>
                            
                            <!-- Hover glow effect -->
                            <div class="faq-glow"></div>
                            
                            <button
                                class="faq-question"
                                data-index={index}
                                aria-expanded="false"
                            >
                                <span class="faq-question-text">
                                    {faq.question}
                                </span>
                                
                                <!-- Icon container -->
                                <div class="faq-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="faq-icon-plus">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                                    </svg>
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="faq-icon-minus">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14" />
                                    </svg>
                                </div>
                            </button>
                            
                            <div
                                class="faq-answer"
                                style="max-height: 0;"
                                data-index={index}
                            >

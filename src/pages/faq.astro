<script is:inline>
    // FAQ Accordion Logic
    document.addEventListener('DOMContentLoaded', function() {
        const faqQuestions = document.querySelectorAll(".faq-question");

        function initAccordion(questions) {
            questions.forEach((question) => {
                question.addEventListener("click", () => {
                    const index = question.getAttribute("data-index");
                    const answer = document.querySelector(
                        `.faq-answer[data-index="${index}"]`,
                    );
                    const isExpanded =
                        question.getAttribute("aria-expanded") === "true";
                    const parentItem = question.closest(".faq-item");

                    // Close all other FAQs
                    document.querySelectorAll(".faq-question").forEach((q) => {
                        const qIndex = q.getAttribute("data-index");
                        if (qIndex !== index) {
                            const qAnswer = document.querySelector(
                                `.faq-answer[data-index="${qIndex}"]`,
                            );
                            const qParent = q.closest(".faq-item");

                            if (qAnswer) {
                                qAnswer.style.maxHeight = "0";
                            }
                            q.setAttribute("aria-expanded", "false");
                            qParent?.classList.remove("is-open");
                        }
                    });

                    // Toggle current FAQ
                    if (isExpanded) {
                        if (answer) {
                            answer.style.maxHeight = "0";
                        }
                        question.setAttribute("aria-expanded", "false");
                        parentItem?.classList.remove("is-open");
                    } else {
                        if (answer) {
                            answer.style.maxHeight = answer.scrollHeight + "px";
                        }
                        question.setAttribute("aria-expanded", "true");
                        parentItem?.classList.add("is-open");
                    }
                });
            });
        }

        // Initialize existing questions
        initAccordion(faqQuestions);

        // Load More FAQs Logic
        const loadMoreBtn = document.getElementById('load-more-faqs-btn');
        const faqItems = document.querySelectorAll('.faq-item');
        let currentlyShown = 12;
        const incrementBy = 12;
        const totalFaqs = faqItems.length;

        if (loadMoreBtn) {
            loadMoreBtn.addEventListener('click', function() {
                // Show next batch of FAQs
                const nextBatch = currentlyShown + incrementBy;
                
                for (let i = currentlyShown; i < nextBatch && i < totalFaqs; i++) {
                    faqItems[i].classList.remove('hidden');
                    // Add smooth fade-in animation
                    faqItems[i].style.animation = 'fadeInUp 0.4s ease-out forwards';
                    faqItems[i].style.animationDelay = `${(i - currentlyShown) * 0.05}s`;
                }
                
                currentlyShown = Math.min(nextBatch, totalFaqs);
                
                // Hide button if all FAQs are shown
                if (currentlyShown >= totalFaqs) {
                    document.getElementById('load-more-container').classList.add('hidden');
                }
            });
        }
    });
</script>


                    id="load-more-btn"
                    class="btn btn-secondary"
                >
                    Load More Reviews
                </button>
            </div>
        </div>
    </section>

    <script is:inline>
        document.addEventListener("DOMContentLoaded", function () {
            const loadMoreBtn = document.getElementById("load-more-btn");
            const reviewCards = document.querySelectorAll(".review-card");
            let currentlyShown = 6;
            const incrementBy = 6;
            const totalReviews = reviewCards.length;

            if (loadMoreBtn) {
                loadMoreBtn.addEventListener("click", function () {
                    // Show next batch of reviews
                    const nextBatch = currentlyShown + incrementBy;
                    for (
                        let i = currentlyShown;
                        i < nextBatch && i < totalReviews;
                        i++
                    ) {
                        reviewCards[i].classList.remove("hidden");
                    }
                    currentlyShown = Math.min(nextBatch, totalReviews);

                    // Hide button if all reviews are shown
                    if (currentlyShown >= totalReviews) {
                        document
                            .getElementById("load-more-container")
                            .classList.add("hidden");
                    }
                });
            }
        });
    </script>


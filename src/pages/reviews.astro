                {
                    reviews.map((review, index) => (
                        <div
                            class={`review-card bg-[var(--bg-surface)] p-6 md:p-10 rounded-[var(--radius-xl)] border border-[var(--border-light)] relative hover:border-[var(--border-focus)] hover:shadow-[var(--shadow-brand)] transition-all duration-[var(--transition-base)] group shadow-[var(--shadow-sm)] ${

---
import { getCollection } from "astro:content";

export const prerender = true;

import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import SocialShare from "../../components/SocialShare.astro";
import BlogCard from "../../components/BlogCard.astro";
import Button from "../../components/ui/Button.astro";
import {
    formatDate,
    calculateReadingTime,
    findRelatedPosts,
} from "../../utils/blog";
import {
    generateArticleSchema,
    generateBreadcrumbSchema,
} from "../../utils/seo";
import { SITE_CONFIG } from "../../config/site";

export async function getStaticPaths() {
    const posts = await getCollection("blog");
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: post,
    }));
}

const post = Astro.props;
const { Content } = await post.render();

// Get all posts for related posts
const allPosts = await getCollection("blog");
const relatedPosts = findRelatedPosts(post, allPosts, 3);

// Calculate reading time
const readingTime = calculateReadingTime(post.body);

// SEO Schema
const siteUrl = SITE_CONFIG.seo.siteUrl;
const articleSchema = generateArticleSchema(post, siteUrl);
const breadcrumbSchema = generateBreadcrumbSchema(
    [
        { name: "Home", url: "/" },
        { name: "Blog", url: "/blog" },
        { name: post.data.title, url: `/blog/${post.slug}` },
    ],
    siteUrl,
);

const currentUrl = `${siteUrl}/blog/${post.slug}`;
---

<Layout
    title={`${post.data.title} - Solomon Electric Blog`}
    description={post.data.description}
>
    <!-- Structured Data -->
    <script
        type="application/ld+json"
        set:html={JSON.stringify(articleSchema)}
    />
    <script
        type="application/ld+json"
        set:html={JSON.stringify(breadcrumbSchema)}
    />

    <!-- SEO Meta Tags -->
    <meta slot="head" property="og:title" content={post.data.title} />
    <meta
        slot="head"
        property="og:description"
        content={post.data.description}
    />
    <meta slot="head" property="og:type" content="article" />
    <meta slot="head" property="og:url" content={currentUrl} />
    <meta
        slot="head"
        property="article:published_time"
        content={post.data.pubDate.toISOString()}
    />
    {
        post.data.updatedDate && (
            <meta
                slot="head"
                property="article:modified_time"
                content={post.data.updatedDate.toISOString()}
            />
        )
    }
    <meta slot="head" name="twitter:card" content="summary_large_image" />
    <meta slot="head" name="twitter:title" content={post.data.title} />
    <meta
        slot="head"
        name="twitter:description"
        content={post.data.description}
    />

    <!-- Breadcrumb Navigation -->
    <nav class="bg-light py-4 border-b border-gray-200">
        <div class="container-custom">
            <div
                class="flex items-center gap-2 text-sm text-gray-500 font-medium"
            >
                <a href="/" class="hover:text-accent transition-colors">Home</a>
                <span>/</span>
                <a href="/blog" class="hover:text-accent transition-colors"
                    >Blog</a
                >
                <span>/</span>
                <span class="text-primary font-bold line-clamp-1"
                    >{post.data.title}</span
                >
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="relative bg-primary py-20 md:py-32 overflow-hidden">
        <div class="absolute inset-0 z-0">
            {
                post.data.image && (
                    <Image
                        src={post.data.image}
                        alt={post.data.title}
                        class="w-full h-full object-cover opacity-20"
                    />
                )
            }
            <div
                class="absolute inset-0 bg-gradient-to-t from-primary/95 via-primary/60 to-primary/40"
            >
            </div>
        </div>

        <div class="container-custom relative z-10">
            <div class="max-w-4xl mx-auto">
                <!-- Category Badge -->
                <div class="mb-6">
                    <span
                        class="inline-block bg-accent/20 text-accent text-xs font-bold uppercase tracking-widest px-4 py-2 rounded-full border border-accent/20"
                    >
                        {post.data.category}
                    </span>
                </div>

                <!-- Title -->
                <h1
                    class="text-3xl md:text-5xl lg:text-6xl font-black text-white mb-6 shadow-black drop-shadow-lg leading-tight uppercase"
                >
                    {post.data.title}
                </h1>

                <!-- Meta Info -->
                <div
                    class="flex flex-wrap items-center gap-4 md:gap-6 text-white/80 font-medium"
                >
                    <div class="flex items-center gap-2">
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                            ></path>
                        </svg>
                        <span>{formatDate(post.data.pubDate)}</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path>
                        </svg>
                        <span>{readingTime} min read</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                            ></path>
                        </svg>
                        <span>{post.data.author}</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Article Content -->
    <section class="py-16 md:py-24 bg-white">
        <div class="container-custom">
            <div class="max-w-4xl mx-auto">
                <!-- Main Content -->
                <article
                    class="prose prose-lg mx-auto prose-headings:font-display prose-headings:font-black prose-headings:text-primary prose-headings:tracking-tight prose-p:text-gray-600 prose-p:leading-relaxed prose-li:text-gray-600 prose-strong:text-accent prose-a:text-accent prose-a:no-underline hover:prose-a:underline prose-blockquote:border-l-accent prose-blockquote:bg-light prose-blockquote:py-2 prose-blockquote:px-6 prose-blockquote:not-italic prose-blockquote:rounded-r-lg prose-h2:text-3xl prose-h2:mb-6 prose-h2:mt-12 prose-h3:text-2xl prose-h3:mb-4 prose-h3:mt-8 prose-h2:uppercase prose-h3:uppercase"
                >
                    <Content />
                </article>

                <!-- Tags -->
                {
                    post.data.tags && post.data.tags.length > 0 && (
                        <div class="mt-12 pt-8 border-t border-gray-100">
                            <div class="flex flex-wrap items-center gap-3">
                                <span class="text-primary font-bold uppercase tracking-widest text-sm">
                                    Tags:
                                </span>
                                {post.data.tags.map((tag: string) => (
                                    <span class="px-4 py-2 bg-light border border-gray-200 rounded-full text-sm text-gray-600 hover:border-accent hover:text-accent transition-all font-medium">
                                        {tag}
                                    </span>
                                ))}
                            </div>
                        </div>
                    )
                }

                <!-- Social Share -->
                <SocialShare currentUrl={currentUrl} title={post.data.title} />

                <!-- CTA -->
                <div
                    class="mt-16 bg-light border border-gray-100 rounded-2xl p-8 md:p-12 text-center shadow-sm"
                >
                    <h3
                        class="text-2xl md:text-3xl font-black text-primary mb-4 uppercase"
                    >
                        Ready for Professional Electrical Service?
                    </h3>
                    <p class="text-gray-600 mb-6 max-w-2xl mx-auto font-medium">
                        Get expert electrical solutions from Miami's trusted
                        contractors. 24/7 emergency service available.
                    </p>
                    <div class="flex flex-col md:flex-row gap-4 justify-center">
                        <Button
                            href="/contact"
                            variant="primary"
                            class="px-10 py-4 text-lg flex items-center gap-2"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                                class="w-5 h-5"
                            >
                                <path
                                    d="M3 4a2 2 0 00-2 2v1.161l8.441 4.221a1.25 1.25 0 001.118 0L19 7.162V6a2 2 0 00-2-2H3z"
                                ></path>
                                <path
                                    d="M19 8.839l-7.77 3.885a2.75 2.75 0 01-2.46 0L1 8.839V14a2 2 0 002 2h14a2 2 0 002-2V8.839z"
                                ></path>
                            </svg>
                            Schedule Service
                        </Button>
                        <Button
                            href={SITE_CONFIG.contact.phone.href}
                            variant="secondary"
                            class="px-10 py-4 text-lg flex items-center gap-2"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                                class="w-5 h-5"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M2 3.5A1.5 1.5 0 013.5 2h1.148a1.5 1.5 0 011.465 1.175l.716 3.223a1.5 1.5 0 01-1.052 1.767l-.933.267c-.41.117-.643.555-.48.95a11.542 11.542 0 006.254 6.254c.395.163.833-.07.95-.48l.267-.933a1.5 1.5 0 011.767-1.052l3.223.716A1.5 1.5 0 0118 15.352V16.5a1.5 1.5 0 01-1.5 1.5H15c-1.149 0-2.263-.15-3.326-.43A13.022 13.022 0 012.43 8.326 13.019 13.019 0 012 5V3.5z"
                                    clip-rule="evenodd"></path>
                            </svg>
                            Call Now
                        </Button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Related Posts -->
    {
        relatedPosts.length > 0 && (
            <section class="py-16 md:py-20 bg-light border-t border-gray-200">
                <div class="container-custom">
                    <div class="mb-12">
                        <h2 class="text-3xl md:text-4xl font-black text-primary mb-2 uppercase">
                            Related <span class="text-accent">Articles</span>
                        </h2>
                        <p class="text-gray-600 font-medium">
                            Continue learning about electrical services
                        </p>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
                        {relatedPosts.map((relatedPost: any) => (
                            <BlogCard post={relatedPost} />
                        ))}
                    </div>
                </div>
            </section>
        )
    }
</Layout>

---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import heroImage from "../../assets/images/hero.webp";
import BlogCard from "../../components/BlogCard.astro";
import { sortPostsByDate } from "../../utils/blog";
import Button from "../../components/ui/Button.astro";
import { SITE_CONFIG } from "../../config/site";

// Get all blog posts and sort by date
const allPosts = await getCollection("blog");
const posts = sortPostsByDate(allPosts);

// Get featured posts
const featuredPosts = posts.filter((p) => p.data.featured).slice(0, 3);
const regularPosts = posts.filter((p) => !p.data.featured);
---

<Layout
    title="Electrical Services Blog - Solomon Electric"
    description="Expert insights, guides, and tips for residential and commercial electrical services. Learn from Miami's premier electrical contractors."
>
    <!-- Hero Section -->
    <section
        class="relative bg-primary overflow-hidden"
        style="padding-top: var(--spacing-3xl); padding-bottom: var(--spacing-3xl);"
    >
        <div class="absolute inset-0 z-0">
            <Image
                src={heroImage}
                alt="Blog"
                class="w-full h-full object-cover opacity-20"
            />
            <div
                class="absolute inset-0 bg-gradient-to-b from-primary/90 via-primary/70 to-primary"
            >
            </div>
        </div>

        <div class="container-custom relative z-10 text-center">
            <h1
                class="font-black text-white tracking-tighter shadow-black drop-shadow-lg uppercase"
                style="font-size: clamp(2.5rem, 5vw + 0.5rem, 5.5rem); margin-bottom: var(--spacing-lg);"
            >
                Electrical Insights & <span class="text-accent">Guides</span>
            </h1>
            <p
                class="text-white/90 font-medium leading-relaxed"
                style="font-size: clamp(1rem, 1vw + 0.25rem, 1.5rem);"
            >
                Expert knowledge from Miami's premier electrical contractors.
                Learn about services, safety, and modern electrical solutions.
            </p>
        </div>
    </section>

    <!-- Featured Posts Section -->
    {
        featuredPosts.length > 0 && (
            <section
                class="bg-light border-b border-gray-100"
                style="padding-top: var(--spacing-3xl); padding-bottom: var(--spacing-3xl);"
            >
                <div class="container-custom">
                    <div class="mb-12 text-center md:text-left">
                        <h2 class="text-3xl md:text-4xl font-black text-primary mb-2 uppercase">
                            Featured <span class="text-accent">Articles</span>
                        </h2>
                        <p class="text-gray-600 font-medium">
                            Must-read guides for electrical services
                        </p>
                    </div>

                    <div
                        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3"
                        style="gap: var(--spacing-lg);"
                    >
                        {featuredPosts.map((post) => (
                            <BlogCard post={post} />
                        ))}
                    </div>
                </div>
            </section>
        )
    }

    <!-- All Posts Section -->
    <section
        class="bg-white"
        style="padding-top: var(--spacing-3xl); padding-bottom: var(--spacing-3xl);"
    >
        <div class="container-custom">
            <div class="mb-12 text-center md:text-left">
                <h2
                    class="text-3xl md:text-4xl font-black text-primary mb-2 uppercase"
                >
                    All <span class="text-accent">Articles</span>
                </h2>
                <p class="text-gray-600 font-medium">
                    Comprehensive guides to electrical services
                </p>
            </div>

            <div
                class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3"
                style="gap: var(--spacing-lg);"
            >
                {regularPosts.map((post) => <BlogCard post={post} />)}
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section
        class="bg-light"
        style="padding-top: var(--spacing-3xl); padding-bottom: var(--spacing-3xl);"
    >
        <div class="container-custom">
            <div
                class="bg-white border border-gray-100 rounded-2xl p-12 md:p-16 text-center shadow-sm"
            >
                <h2
                    class="text-3xl md:text-4xl font-black text-primary mb-4 uppercase"
                >
                    Ready to Get Started?
                </h2>
                <p class="text-gray-600 text-lg mb-8 font-medium">
                    24/7 emergency service available. Contact us today for a
                    free consultation and quote.
                </p>
                <div class="flex flex-col md:flex-row gap-4 justify-center">
                    <Button
                        href="/contact"
                        variant="primary"
                        class="px-12 py-6 text-xl flex items-center gap-2"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 20 20"
                            fill="currentColor"
                            class="w-5 h-5"
                        >
                            <path
                                d="M3 4a2 2 0 00-2 2v1.161l8.441 4.221a1.25 1.25 0 001.118 0L19 7.162V6a2 2 0 00-2-2H3z"
                            ></path>
                            <path
                                d="M19 8.839l-7.77 3.885a2.75 2.75 0 01-2.46 0L1 8.839V14a2 2 0 002 2h14a2 2 0 002-2V8.839z"
                            ></path>
                        </svg>
                        Get a Quote
                    </Button>
                    <Button
                        href={SITE_CONFIG.contact.phone.href}
                        variant="secondary"
                        class="px-12 py-6 text-xl flex items-center gap-2"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 20 20"
                            fill="currentColor"
                            class="w-5 h-5"
                        >
                            <path
                                fill-rule="evenodd"
                                d="M2 3.5A1.5 1.5 0 013.5 2h1.148a1.5 1.5 0 011.465 1.175l.716 3.223a1.5 1.5 0 01-1.052 1.767l-.933.267c-.41.117-.643.555-.48.95a11.542 11.542 0 006.254 6.254c.395.163.833-.07.95-.48l.267-.933a1.5 1.5 0 011.767-1.052l3.223.716A1.5 1.5 0 0118 15.352V16.5a1.5 1.5 0 01-1.5 1.5H15c-1.149 0-2.263-.15-3.326-.43A13.022 13.022 0 012.43 8.326 13.019 13.019 0 012 5V3.5z"
                                clip-rule="evenodd"></path>
                        </svg>
                        Call Now
                    </Button>
                </div>
            </div>
        </div>
    </section>
</Layout>

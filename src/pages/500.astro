---
import Layout from "../layouts/Layout.astro";
import ErrorPage from "../components/ErrorPage.astro";
import { AlertTriangle } from "lucide-astro";
---

<Layout
    title="500 - Server Error | Solomon Electric"
    description="Our server encountered an unexpected error. If you have an electrical emergency, please call us directly."
    noindex={true}
>
    <ErrorPage
        code="500"
        title="Server Error"
        description="Something went wrong on our end. We're working to fix it. If you have an electrical emergency, please call us directlyâ€”electrical issues don't wait for servers."
        codeSize="clamp(5rem, 15vw, 10rem)"
    >
        <div
            slot="icon"
            class="w-24 h-24 bg-[var(--color-accent)]/10 rounded-[var(--radius-full)] flex items-center justify-center mx-auto mb-8"
        >
            <AlertTriangle class="w-12 h-12 text-[var(--color-accent)]" />
        </div>
    </ErrorPage>
</Layout>

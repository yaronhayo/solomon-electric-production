---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import heroImage from "../assets/images/heroes/about.png";
import dispatcherImage from "../assets/images/enhancements/dispatcher.png";
import Button from "../components/ui/Button.astro";
import Container from "../components/ui/Container.astro";
import { SITE_CONFIG } from "../config/site";
import PageHero from "../components/PageHero.astro";
import Breadcrumb from "../components/Breadcrumb.astro";
import {
    generateOrganizationSchema,
    generateBreadcrumbSchema,
} from "../utils/seo";
import {
    ShieldCheck,
    Wrench,
    Heart,
    BadgeCheck,
    Users,
    Shield,
    ThumbsUp,
} from "lucide-astro";

// Generate Organization Schema for About Page
const organizationSchema = generateOrganizationSchema(SITE_CONFIG.seo.siteUrl);

const breadcrumbSchema = generateBreadcrumbSchema(
    [
        { name: "Home", url: "/" },
        { name: "About Us", url: "/about" },
    ],
    SITE_CONFIG.seo.siteUrl,
);
---

<Layout
    title="About Solomon Electric | Licensed Miami Electricians Since 2008"
    description="Meet South Florida's trusted electrical team. 19,400+ projects completed. FL License #EC13012419. Family-owned, 24/7 service, satisfaction guaranteed."
    ogImage={`${SITE_CONFIG.seo.siteUrl}/og-default.jpg`}
    ogImageAlt="Solomon Electric Team - Licensed Miami Electricians since 2008"
    topBarDark={true}
>
    <!-- Schema Markup -->
    <script
        type="application/ld+json"
        set:html={JSON.stringify(organizationSchema)}
    />
    <script
        type="application/ld+json"
        set:html={JSON.stringify(breadcrumbSchema)}
    />

    <!-- Breadcrumb Navigation -->
    <Breadcrumb items={[{ label: "Home", href: "/" }, { label: "About Us" }]} />

    <!-- Hero Section -->
    <PageHero
        title="Licensed Miami Electricians<br/><span class='text-transparent bg-clip-text bg-gradient-to-r from-accent to-white'>19,400+ Projects Since 2008</span>"
        subtitle="About Solomon Electric • FL License #EC13012419"
        description="From homeowners protecting their families to business owners keeping operations running—Solomon Electric is the licensed electrical contractor South Florida trusts. Available 24/7 for emergency repairs, panel upgrades, and all electrical services."
        image={heroImage}
    />

    <!-- Company Story Section -->
    <section class="bg-white py-20 md:py-32">
        <Container>
            <div
                class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center reveal reveal-up"
            >
                <!-- Left: Image -->
                <div class="relative order-2 lg:order-1">
                    <div
                        class="absolute -inset-4 border-4 border-accent z-0 translate-x-6 translate-y-6 rounded-3xl"
                    >
                    </div>
                    <Image
                        src={dispatcherImage}
                        alt="Solomon Electric licensed electricians team serving Miami-Dade and Broward counties"
                        class="relative z-10 w-full shadow-2xl rounded-3xl grayscale hover:grayscale-0 transition-all duration-700 hover:scale-[1.02]"
                    />
                </div>

                <!-- Right: Content -->
                <div class="order-1 lg:order-2">
                    <h4
                        class="text-accent font-bold text-lg tracking-[0.2em] uppercase font-secondary"
                        style="margin-bottom: var(--spacing-md);"
                    >
                        Miami's Trusted Electricians Since 2008
                    </h4>
                    <h2
                        class="text-4xl md:text-5xl font-black text-primary leading-tight uppercase font-display"
                        style="margin-bottom: var(--spacing-xl);"
                    >
                        Licensed <span class="text-accent"
                            >Electrical Contractor</span
                        >
                        in South Florida
                    </h2>
                    <div
                        class="space-y-6 text-[var(--text-body)] leading-relaxed font-medium font-body"
                    >
                        <p class="text-lg">
                            <span class="text-primary font-bold"
                                >Solomon Electric protects Miami families and
                                businesses.</span
                            > Since 2008, we've been the licensed electrician South
                            Florida trusts for panel upgrades, emergency repairs,
                            EV charger installation, and all electrical services.
                            From Miami Beach to Fort Lauderdale to Coral Gables—our
                            experienced team delivers safe, code-compliant electrical
                            work.
                        </p>
                        <p>
                            With <span class="font-bold text-primary"
                                >19,400+ residential and commercial projects</span
                            > completed since 2008, we've helped thousands of homeowners
                            solve electrical problems that other contractors couldn't
                            figure out. We've seen the damage that DIY fixes and unlicensed
                            work can cause—and we've fixed it all.
                        </p>
                        <p>
                            Our licensed electricians don't just show up and
                            start working. We listen to your concerns first,
                            explain exactly what needs to be done, and make sure
                            you're comfortable before we begin. When we leave,
                            you'll have peace of mind knowing the job was done
                            right—backed by our workmanship warranty.
                        </p>
                    </div>
                </div>
            </div>
        </Container>
    </section>

    <!-- Mission & Values Section -->
    <section class="bg-light py-20 md:py-32">
        <Container>
            <div class="text-center" style="margin-bottom: var(--spacing-3xl);">
                <h4
                    class="text-accent font-bold text-lg tracking-[0.2em] mb-4 uppercase font-secondary"
                >
                    Why Choose Solomon Electric
                </h4>
                <h2
                    class="text-3xl md:text-5xl font-black text-primary uppercase font-display"
                >
                    Licensed, Insured, <span class="text-accent"
                        >Guaranteed</span
                    >
                </h2>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 reveal reveal-up">
                <!-- Stop Worrying About Safety -->
                <div
                    class="glass-bg glass-border p-8 rounded-2xl transition-all group hover:bg-white/10 text-center flex flex-col items-center"
                >
                    <div
                        class="w-16 h-16 bg-accent/10 rounded-xl flex items-center justify-center group-hover:bg-accent transition-all shimmer-authority mb-6"
                    >
                        <ShieldCheck
                            class="w-8 h-8 text-accent group-hover:text-white transition-all"
                        />
                    </div>
                    <h3
                        class="text-xl font-black text-primary uppercase font-display mb-4"
                    >
                        Stop Worrying About Electrical Safety
                    </h3>
                    <p class="text-body leading-relaxed font-medium font-body">
                        Faulty wiring causes over 50,000 home fires every year.
                        When you hire us, every wire, every connection, every
                        installation is inspected and tested.
                    </p>
                </div>

                <!-- Never Call Back -->
                <div
                    class="glass-bg glass-border p-8 rounded-2xl transition-all group hover:bg-white/10 text-center flex flex-col items-center"
                >
                    <div
                        class="w-16 h-16 bg-accent/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-accent transition-all shimmer-authority"
                    >
                        <Wrench
                            class="w-8 h-8 text-accent group-hover:text-white transition-all"
                        />
                    </div>
                    <h3
                        class="text-xl font-black text-primary mb-4 uppercase font-display"
                    >
                        Never Call Someone to Fix Our Work
                    </h3>
                    <p class="text-body leading-relaxed font-medium font-body">
                        Tired of contractors who cut corners? We use
                        commercial-grade materials and proven techniques. Our
                        workmanship warranty has you covered—no questions asked.
                    </p>
                </div>

                <!-- Actually Listen -->
                <div
                    class="glass-bg glass-border p-8 rounded-2xl transition-all group hover:bg-white/10 text-center flex flex-col items-center"
                >
                    <div
                        class="w-16 h-16 bg-accent/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-accent transition-all shimmer-authority"
                    >
                        <Heart
                            class="w-8 h-8 text-accent group-hover:text-white transition-all"
                        />
                    </div>
                    <h3
                        class="text-xl font-black text-primary mb-4 uppercase font-display"
                    >
                        An Electrician Who Actually Listens
                    </h3>
                    <p class="text-body leading-relaxed font-medium font-body">
                        We know you've probably dealt with contractors who
                        talked over you. We're different: we listen first,
                        explain in plain English, and treat your property like
                        our own.
                    </p>
                </div>
            </div>
        </Container>
    </section>

    <!-- Certifications & Credentials -->
    <section
        id="our-story"
        aria-labelledby="story-heading"
        class="py-20 md:py-32 bg-white relative overflow-hidden"
    >
        <Container>
            <div class="text-center" style="margin-bottom: var(--spacing-3xl);">
                <h2
                    id="story-heading"
                    class="text-3xl md:text-5xl font-black text-primary mb-6 uppercase leading-tight font-display"
                >
                    A Legacy of <span
                        class="text-accent underline decoration-accent/20 underline-offset-8"
                        >Excellence</span
                    > Since 2008
                </h2>
                <p
                    class="text-[var(--text-body)] text-lg font-medium max-w-5xl mx-auto font-body"
                >
                    We maintain the highest professional standards and
                    regulatory compliance to ensure your complete peace of mind.
                </p>
            </div>

            <div
                class="grid grid-cols-2 md:grid-cols-4 text-center"
                style="gap: var(--spacing-xl);"
            >
                <!-- Licensed -->
                <div class="reveal reveal-up">
                    <div
                        class="glass-bg glass-border p-6 rounded-2xl hover:bg-white/10 transition-all flex flex-col items-center"
                    >
                        <div
                            class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mb-4 shimmer-authority"
                        >
                            <BadgeCheck class="w-6 h-6 text-accent" />
                        </div>
                        <h3
                            class="font-black text-primary uppercase font-display"
                            style="font-size: clamp(1.25rem, 2vw, 1.5rem); margin-bottom: 0.5rem;"
                        >
                            FL Licensed
                        </h3>
                        <p class="text-sm font-bold text-accent font-secondary">
                            EC13012419
                        </p>
                    </div>
                </div>

                <!-- Experience -->
                <div class="reveal reveal-up" style="transition-delay: 100ms;">
                    <div
                        class="glass-bg glass-border p-6 rounded-2xl hover:bg-white/10 transition-all flex flex-col items-center"
                    >
                        <div
                            class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mb-4 shimmer-authority"
                        >
                            <Users class="w-6 h-6 text-accent" />
                        </div>
                        <h3
                            class="font-black text-primary uppercase font-display"
                            style="font-size: clamp(1.25rem, 2vw, 1.5rem); margin-bottom: 0.5rem;"
                        >
                            15+ Years
                        </h3>
                        <p class="text-sm font-bold text-accent font-secondary">
                            Local Experience
                        </p>
                    </div>
                </div>

                <!-- Insured -->
                <div class="reveal reveal-up" style="transition-delay: 200ms;">
                    <div
                        class="glass-bg glass-border p-6 rounded-2xl hover:bg-white/10 transition-all flex flex-col items-center"
                    >
                        <div
                            class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mb-4 shimmer-authority"
                        >
                            <Shield class="w-6 h-6 text-accent" />
                        </div>
                        <h3
                            class="font-black text-primary uppercase font-display"
                            style="font-size: clamp(1.25rem, 2vw, 1.5rem); margin-bottom: 0.5rem;"
                        >
                            Full Insured
                        </h3>
                        <p class="text-sm font-bold text-accent font-secondary">
                            $2M Coverage
                        </p>
                    </div>
                </div>

                <!-- Guaranteed -->
                <div class="reveal reveal-up" style="transition-delay: 300ms;">
                    <div
                        class="glass-bg glass-border p-6 rounded-2xl hover:bg-white/10 transition-all flex flex-col items-center"
                    >
                        <div
                            class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mb-4 shimmer-authority"
                        >
                            <ThumbsUp class="w-6 h-6 text-accent" />
                        </div>
                        <h3
                            class="font-black text-primary uppercase font-display"
                            style="font-size: clamp(1.25rem, 2vw, 1.5rem); margin-bottom: 0.5rem;"
                        >
                            Guaranteed
                        </h3>
                        <p class="text-sm font-bold text-accent font-secondary">
                            Satisfaction
                        </p>
                    </div>
                </div>
            </div>
        </Container>
    </section>

    <!-- Call to Excellence -->
    <section class="py-20 md:py-32 bg-primary relative overflow-hidden">
        <div class="absolute inset-0 opacity-10">
            <div
                class="absolute top-0 right-0 w-96 h-96 bg-accent blur-[120px] rounded-full"
            >
            </div>
            <div
                class="absolute bottom-0 left-0 w-96 h-96 bg-accent blur-[120px] rounded-full"
            >
            </div>
        </div>

        <Container class="relative z-10 text-center">
            <h2
                class="text-3xl md:text-6xl font-black text-white mb-8 uppercase leading-tight font-display reveal reveal-up max-w-4xl mx-auto"
            >
                Ready to Experience <br />
                <span class="text-accent">Better</span> Electrical Service?
            </h2>
            <p
                class="text-white/80 text-lg md:text-xl font-medium max-w-4xl mx-auto mb-12 font-body reveal reveal-up reveal-delay-1"
            >
                Don't settle for "good enough" when it comes to your family's
                safety. Join the 19,400+ satisfied customers who trust Solomon
                Electric.
            </p>
            <div
                class="flex flex-col sm:flex-row gap-6 justify-center items-center reveal reveal-up reveal-delay-2"
            >
                <Button
                    href="/book"
                    variant="primary"
                    class="w-full sm:w-auto text-lg px-8 py-4 magnetic-cta"
                >
                    Book Your Inspection
                </Button>
                <Button
                    href={`tel:${SITE_CONFIG.contact.phone.raw}`}
                    variant="secondary"
                    class="w-full sm:w-auto text-lg px-8 py-4"
                >
                    {SITE_CONFIG.contact.phone.formatted}
                </Button>
            </div>
        </Container>
    </section>
</Layout>

---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import heroImage from "../assets/images/hero.webp";
import customerInteractionImage from "../assets/images/enhancements/customer-interaction.png";
import trustBgImage from "../assets/images/enhancements/trust-bg.png";
import ReviewCarousel from "../components/ReviewCarousel.astro";
import FAQAccordion from "../components/FAQAccordion.astro";
import LatestBlogPosts from "../components/LatestBlogPosts.astro";
import {
    services,
    getFeaturedServices,
    serviceCategories,
    getCategoryInfo,
} from "../data/services";
import { SERVICE_AREAS } from "../data/service-areas";
import { SITE_CONFIG } from "../config/site";
import Button from "../components/ui/Button.astro";
import Container from "../components/ui/Container.astro";
import BookingForm from "../components/BookingForm.astro";

// For featured carousel, get first 3 services
const featuredServices = services.slice(0, 3);

const stats = [
    {
        number: SITE_CONFIG.stats.residentialProjects,
        label: "Residential Projects",
    },
    { number: SITE_CONFIG.stats.commercialJobs, label: "Commercial Jobs" },
    {
        number: SITE_CONFIG.stats.industrialSystems,
        label: "Industrial Systems",
    },
    { number: SITE_CONFIG.stats.happyClients, label: "Happy Clients" },
];

const serviceAreas = SERVICE_AREAS;
---

<Layout
    title="Solomon Electric - Miami's Most Trusted 24/7 Electrician | Licensed & Insured"
    description="Expert electrical services in Miami. 24/7 emergency response, residential & commercial. Panel upgrades, EV charging, smart homes, repairs. Licensed, insured, 15+ years experience. Call (786) 833-9211"
>
    <!-- Hero Section - Fully responsive with optimized spacing -->
    <section
        class="relative min-h-screen flex items-center overflow-hidden pt-32 pb-20 md:pt-48 md:pb-32"
    >
        <!-- Background with overlay -->
        <div class="absolute inset-0 z-0">
            <Image
                src={heroImage}
                alt="Professional Electrician Working"
                class="w-full h-full object-cover"
            />
            <div
                class="absolute inset-0 bg-gradient-to-r from-primary/95 via-primary/85 to-primary/50 md:via-primary/80 md:to-primary/40 lg:to-transparent"
            >
            </div>
            <div
                class="absolute inset-0 bg-gradient-to-t from-primary/60 via-transparent to-transparent md:hidden"
            >
            </div>
        </div>

        <!-- Hero Content -->
        <Container class="relative z-10">
            <div
                class="grid grid-cols-1 lg:grid-cols-12 items-center"
                style="gap: var(--spacing-xl);"
            >
                <!-- Left Column: Text -->
                <div class="lg:col-span-7">
                    <p
                        class="text-accent tracking-[0.3em] font-bold uppercase"
                        style="font-size: clamp(0.875rem, 1vw + 0.5rem, 1.125rem); margin-bottom: var(--spacing-md);"
                    >
                        Miami's Premier Electrical Contractor
                    </p>

                    <h1
                        class="font-black text-white leading-[0.9]"
                        style="font-size: clamp(2.5rem, 5vw + 0.5rem, 5rem); margin-bottom: var(--spacing-lg); letter-spacing: -0.04em;"
                    >
                        Power Your World<br />
                        <span
                            class="text-transparent bg-clip-text bg-gradient-to-r from-accent to-white"
                        >
                            With Confidence
                        </span>
                    </h1>

                    <p
                        class="text-gray-200 font-light leading-relaxed"
                        style="font-size: clamp(1rem, 1vw + 0.25rem, 1.25rem); margin-bottom: var(--spacing-lg);"
                    >
                        Licensed, insured electricians ready to serve you 24/7.
                        From emergency repairs to complete installations, we
                        deliver excellence at the speed of light.
                    </p>

                    <!-- Trust Indicators -->
                    <div
                        class="flex flex-wrap items-center"
                        style="gap: var(--spacing-md); margin-bottom: var(--spacing-xl);"
                    >
                        <div
                            class="flex items-center text-accent"
                            style="gap: var(--spacing-xs);"
                        >
                            <svg
                                class="w-5 h-5"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                    clip-rule="evenodd"></path>
                            </svg>
                            <span
                                class="font-bold text-white"
                                style="font-size: clamp(0.875rem, 1vw + 0.25rem, 1.125rem);"
                                >Licensed FL EC13012419</span
                            >
                        </div>
                        <div class="flex items-center gap-2 text-accent">
                            <svg
                                class="w-5 h-5"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z"
                                ></path>
                            </svg>
                            <span
                                class="font-bold text-white"
                                style="font-size: clamp(0.875rem, 1vw + 0.25rem, 1.125rem);"
                                >24/7 Emergency Service</span
                            >
                        </div>
                    </div>
                </div>

                <!-- Right Column: Booking Form -->
                <div class="lg:col-span-5 relative">
                    <BookingForm />
                </div>
            </div>
        </Container>
    </section>

    <!-- Scroll Indicator -->
    <div
        class="absolute bottom-6 left-1/2 -translate-x-1/2 z-10 hidden lg:block"
    >
        <div
            class="flex flex-col items-center gap-2 text-white/50 animate-bounce"
        >
            <span class="text-[10px] uppercase tracking-widest"
                >Scroll Down</span
            >
            <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
        </div>
    </div>
</Layout>


---
import Layout from "../layouts/Layout.astro";
import { SITE_CONFIG } from "../config/site";
import Button from "../components/ui/Button.astro";

const pageTitle = "Brand Guidelines | Solomon Electric";
const pageDescription =
    "Official brand guidelines and design system for Solomon Electric. Complete documentation of colors, typography, components, and usage standards.";
---

<Layout title={pageTitle} description={pageDescription} noindex={true}>
    <!-- Hero Section -->
    <section
        class="relative bg-gradient-to-br from-primary via-primary to-[#092d5a] py-20 md:py-28 overflow-hidden"
    >
        <!-- Background Pattern -->
        <div class="absolute inset-0 opacity-10">
            <div
                class="absolute top-0 right-0 w-96 h-96 bg-accent rounded-full filter blur-3xl"
            >
            </div>
            <div
                class="absolute bottom-0 left-0 w-64 h-64 bg-white rounded-full filter blur-3xl"
            >
            </div>
        </div>

        <div class="container-custom relative z-10">
            <div class="max-w-4xl mx-auto text-center">
                <!-- Brand Badge -->
                <div
                    class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full mb-6"
                >
                    <span class="w-2 h-2 bg-accent rounded-full animate-pulse"
                    ></span>
                    <span
                        class="text-accent font-bold text-xs uppercase tracking-widest"
                        >Official Brand Guide</span
                    >
                </div>

                <h1
                    class="text-white text-4xl md:text-6xl font-display font-black uppercase tracking-wide mb-6"
                >
                    Brand <span class="text-accent">Guidelines</span>
                </h1>

                <p
                    class="text-white/80 text-lg md:text-xl max-w-2xl mx-auto mb-8"
                >
                    The complete design system and brand identity standards for
                    Solomon Electric. Ensuring consistency across all
                    touchpoints.
                </p>

                <div
                    class="flex flex-wrap items-center justify-center gap-4 text-sm text-white/60"
                >
                    <span>Version 3.6</span>
                    <span class="w-1 h-1 bg-accent rounded-full"></span>
                    <span>February 2026</span>
                    <span class="w-1 h-1 bg-accent rounded-full"></span>
                    <span>Premium Template</span>
                </div>
            </div>
        </div>

        <!-- Accent Line -->
        <div
            class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-transparent via-accent to-transparent"
        >
        </div>
    </section>

    <!-- Table of Contents -->
    <section class="py-12 bg-white border-b border-gray-100">
        <div class="container-custom">
            <div
                class="flex flex-wrap items-center justify-center gap-4 md:gap-8"
            >
                <a
                    href="#brand-core"
                    class="text-primary hover:text-accent font-bold text-sm uppercase tracking-wide transition-colors"
                    >Brand Core</a
                >
                <span class="text-gray-300">|</span>
                <a
                    href="#colors"
                    class="text-primary hover:text-accent font-bold text-sm uppercase tracking-wide transition-colors"
                    >Colors</a
                >
                <span class="text-gray-300">|</span>
                <a
                    href="#typography"
                    class="text-primary hover:text-accent font-bold text-sm uppercase tracking-wide transition-colors"
                    >Typography</a
                >
                <span class="text-gray-300">|</span>
                <a
                    href="#components"
                    class="text-primary hover:text-accent font-bold text-sm uppercase tracking-wide transition-colors"
                    >Components</a
                >
                <span class="text-gray-300">|</span>
                <a
                    href="#spacing"
                    class="text-primary hover:text-accent font-bold text-sm uppercase tracking-wide transition-colors"
                    >Spacing</a
                >
                <span class="text-gray-300">|</span>
                <a
                    href="#usage"
                    class="text-primary hover:text-accent font-bold text-sm uppercase tracking-wide transition-colors"
                    >Usage</a
                >
            </div>
        </div>
    </section>

    <!-- Brand Core -->
    <section id="brand-core" class="py-16 md:py-24 bg-light">
        <div class="container-custom">
            <div class="max-w-6xl mx-auto">
                <div class="text-center mb-16">
                    <span
                        class="inline-block px-4 py-1 bg-accent/10 text-primary font-bold text-xs uppercase tracking-widest rounded-full mb-4"
                        >Section 01</span
                    >
                    <h2
                        class="text-primary text-3xl md:text-4xl font-display uppercase"
                    >
                        Brand Core
                    </h2>
                </div>

                <!-- Logo Display -->
                <div class="grid md:grid-cols-2 gap-8 mb-16">
                    <!-- Primary Logo - Light BG -->
                    <div
                        class="bg-white rounded-lg p-12 shadow-brand flex flex-col items-center justify-center min-h-[300px]"
                    >
                        <img
                            src="/logo.png"
                            alt="Solomon Electric Logo"
                            class="max-w-[250px] h-auto mb-6"
                        />
                        <span
                            class="text-sm font-bold text-gray-500 uppercase tracking-wide"
                            >Primary Logo (Light Background)</span
                        >
                    </div>

                    <!-- Primary Logo - Dark BG -->
                    <div
                        class="bg-primary rounded-lg p-12 shadow-brand flex flex-col items-center justify-center min-h-[300px]"
                    >
                        <img
                            src="/logo.png"
                            alt="Solomon Electric Logo"
                            class="max-w-[250px] h-auto mb-6 brightness-0 invert"
                        />
                        <span
                            class="text-sm font-bold text-white/60 uppercase tracking-wide"
                            >Logo on Dark Background</span
                        >
                    </div>
                </div>

                <!-- Brand Values -->
                <div class="grid md:grid-cols-3 gap-6">
                    <div
                        class="bg-white rounded-lg p-8 text-center shadow-brand border-t-4 border-accent"
                    >
                        <div
                            class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-4"
                        >
                            <svg
                                class="w-8 h-8 text-accent"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                                ></path>
                            </svg>
                        </div>
                        <h3
                            class="text-primary font-bold text-lg uppercase mb-2"
                        >
                            Trust
                        </h3>
                        <p class="text-gray-600 text-sm">
                            Licensed, insured, and delivering excellence since
                            2008
                        </p>
                    </div>

                    <div
                        class="bg-white rounded-lg p-8 text-center shadow-brand border-t-4 border-accent"
                    >
                        <div
                            class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-4"
                        >
                            <svg
                                class="w-8 h-8 text-accent"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                            </svg>
                        </div>
                        <h3
                            class="text-primary font-bold text-lg uppercase mb-2"
                        >
                            Innovation
                        </h3>
                        <p class="text-gray-600 text-sm">
                            Cutting-edge solutions for modern electrical needs
                        </p>
                    </div>

                    <div
                        class="bg-white rounded-lg p-8 text-center shadow-brand border-t-4 border-accent"
                    >
                        <div
                            class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-4"
                        >
                            <svg
                                class="w-8 h-8 text-accent"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                                ></path>
                            </svg>
                        </div>
                        <h3
                            class="text-primary font-bold text-lg uppercase mb-2"
                        >
                            Community
                        </h3>
                        <p class="text-gray-600 text-sm">
                            Serving South Florida families with pride
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Color Palette -->
    <section id="colors" class="py-12 md:py-32 bg-white">
        <div class="container-custom">
            <div class="max-w-6xl mx-auto">
                <div class="text-center mb-16">
                    <span
                        class="inline-block px-4 py-1 bg-accent/10 text-primary font-bold text-xs uppercase tracking-widest rounded-full mb-4"
                        >Section 02</span
                    >
                    <h2
                        class="text-primary text-3xl md:text-4xl font-display uppercase"
                    >
                        Color Palette
                    </h2>
                    <p class="text-gray-600 mt-4 max-w-xl mx-auto">
                        Our carefully curated color system ensures brand
                        recognition and accessibility across all applications.
                    </p>
                </div>

                <!-- Primary Colors -->
                <h3
                    class="text-primary font-bold text-lg uppercase tracking-wide mb-6 border-b-2 border-accent inline-block pb-2"
                >
                    Primary Colors
                </h3>
                <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
                    <!-- Navy Primary -->
                    <div class="group">
                        <div
                            class="bg-primary h-40 rounded-t-lg flex items-end p-4 transition-transform group-hover:scale-[1.02]"
                        >
                            <span class="text-white/80 text-sm font-mono"
                                >--color-primary</span
                            >
                        </div>
                        <div
                            class="bg-gray-50 rounded-b-lg p-4 border border-gray-100"
                        >
                            <h4 class="font-bold text-primary mb-1">
                                Navy Blue
                            </h4>
                            <p class="text-sm text-gray-500 font-mono">
                                #0D4380
                            </p>
                            <p class="text-xs text-gray-400 mt-1">
                                RGB: 13, 67, 128
                            </p>
                        </div>
                    </div>

                    <!-- Electric Cyan -->
                    <div class="group">
                        <div
                            class="bg-accent h-40 rounded-t-lg flex items-end p-4 transition-transform group-hover:scale-[1.02]"
                        >
                            <span class="text-primary/80 text-sm font-mono"
                                >--color-accent</span
                            >
                        </div>
                        <div
                            class="bg-gray-50 rounded-b-lg p-4 border border-gray-100"
                        >
                            <h4 class="font-bold text-primary mb-1">
                                Electric Cyan
                            </h4>
                            <p class="text-sm text-gray-500 font-mono">
                                #14D3E3
                            </p>
                            <p class="text-xs text-gray-400 mt-1">
                                RGB: 20, 211, 227
                            </p>
                        </div>
                    </div>

                    <!-- Light -->
                    <div class="group">
                        <div
                            class="bg-light h-40 rounded-t-lg flex items-end p-4 border border-gray-200 transition-transform group-hover:scale-[1.02]"
                        >
                            <span class="text-gray-500 text-sm font-mono"
                                >--color-light</span
                            >
                        </div>
                        <div
                            class="bg-gray-50 rounded-b-lg p-4 border border-gray-100"
                        >
                            <h4 class="font-bold text-primary mb-1">
                                Light Gray
                            </h4>
                            <p class="text-sm text-gray-500 font-mono">
                                #F3F3F3
                            </p>
                            <p class="text-xs text-gray-400 mt-1">
                                RGB: 243, 243, 243
                            </p>
                        </div>
                    </div>

                    <!-- Dark -->
                    <div class="group">
                        <div
                            class="bg-dark h-40 rounded-t-lg flex items-end p-4 transition-transform group-hover:scale-[1.02]"
                        >
                            <span class="text-white/80 text-sm font-mono"
                                >--color-dark</span
                            >
                        </div>
                        <div
                            class="bg-gray-50 rounded-b-lg p-4 border border-gray-100"
                        >
                            <h4 class="font-bold text-primary mb-1">
                                Charcoal Black
                            </h4>
                            <p class="text-sm text-gray-500 font-mono">
                                #111111
                            </p>
                            <p class="text-xs text-gray-400 mt-1">
                                RGB: 17, 17, 17
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Secondary Colors -->
                <h3
                    class="text-primary font-bold text-lg uppercase tracking-wide mb-6 border-b-2 border-accent inline-block pb-2"
                >
                    Secondary & Accent Colors
                </h3>
                <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
                    <!-- Star Gold -->
                    <div class="group">
                        <div
                            class="h-32 rounded-t-lg flex items-end p-4 transition-transform group-hover:scale-[1.02]"
                            style="background-color: #CDAC4F;"
                        >
                            <span class="text-white/80 text-sm font-mono"
                                >--color-star-gold</span
                            >
                        </div>
                        <div
                            class="bg-gray-50 rounded-b-lg p-4 border border-gray-100"
                        >
                            <h4 class="font-bold text-primary mb-1">
                                Star Gold
                            </h4>
                            <p class="text-sm text-gray-500 font-mono">
                                #CDAC4F
                            </p>
                        </div>
                    </div>

                    <!-- Accent Dark -->
                    <div class="group">
                        <div
                            class="h-32 rounded-t-lg flex items-end p-4 transition-transform group-hover:scale-[1.02]"
                            style="background-color: #0ab8c7;"
                        >
                            <span class="text-white/80 text-sm font-mono"
                                >--color-accent-dark</span
                            >
                        </div>
                        <div
                            class="bg-gray-50 rounded-b-lg p-4 border border-gray-100"
                        >
                            <h4 class="font-bold text-primary mb-1">
                                Accent Dark
                            </h4>
                            <p class="text-sm text-gray-500 font-mono">
                                #0AB8C7
                            </p>
                        </div>
                    </div>

                    <!-- Success -->
                    <div class="group">
                        <div
                            class="h-32 rounded-t-lg flex items-end p-4 transition-transform group-hover:scale-[1.02]"
                            style="background-color: #10b981;"
                        >
                            <span class="text-white/80 text-sm font-mono"
                                >Success</span
                            >
                        </div>
                        <div
                            class="bg-gray-50 rounded-b-lg p-4 border border-gray-100"
                        >
                            <h4 class="font-bold text-primary mb-1">
                                Success Green
                            </h4>
                            <p class="text-sm text-gray-500 font-mono">
                                #10B981
                            </p>
                        </div>
                    </div>

                    <!-- Error -->
                    <div class="group">
                        <div
                            class="h-32 rounded-t-lg flex items-end p-4 transition-transform group-hover:scale-[1.02]"
                            style="background-color: #DC2626;"
                        >
                            <span class="text-white/80 text-sm font-mono"
                                >Error</span
                            >
                        </div>
                        <div
                            class="bg-gray-50 rounded-b-lg p-4 border border-gray-100"
                        >
                            <h4 class="font-bold text-primary mb-1">
                                Error Red
                            </h4>
                            <p class="text-sm text-gray-500 font-mono">
                                #DC2626
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Gradient Showcase -->
                <h3
                    class="text-primary font-bold text-lg uppercase tracking-wide mb-6 border-b-2 border-accent inline-block pb-2"
                >
                    Brand Gradients
                </h3>
                <div class="grid md:grid-cols-2 gap-6">
                    <div class="group">
                        <div
                            class="h-32 rounded-lg bg-gradient-to-r from-primary to-[#092d5a] flex items-center justify-center transition-transform group-hover:scale-[1.02]"
                        >
                            <span
                                class="text-white font-bold uppercase tracking-wide"
                                >Primary Gradient</span
                            >
                        </div>
                        <p class="text-sm text-gray-500 mt-2 font-mono">
                            linear-gradient(135deg, #0D4380 0%, #092d5a 100%)
                        </p>
                    </div>

                    <div class="group">
                        <div
                            class="h-32 rounded-lg bg-gradient-to-r from-accent to-[#10b8c6] flex items-center justify-center transition-transform group-hover:scale-[1.02]"
                        >
                            <span
                                class="text-primary font-bold uppercase tracking-wide"
                                >Accent Gradient</span
                            >
                        </div>
                        <p class="text-sm text-gray-500 mt-2 font-mono">
                            linear-gradient(135deg, #14D3E3 0%, #10b8c6 100%)
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Typography -->
    <section id="typography" class="py-12 md:py-32 bg-light">
        <div class="container-custom">
            <div class="max-w-6xl mx-auto">
                <div class="text-center mb-16">
                    <span
                        class="inline-block px-4 py-1 bg-accent/10 text-primary font-bold text-xs uppercase tracking-widest rounded-full mb-4"
                        >Section 03</span
                    >
                    <h2
                        class="text-primary text-3xl md:text-4xl font-display uppercase"
                    >
                        Typography
                    </h2>
                    <p class="text-gray-600 mt-4 max-w-xl mx-auto">
                        Our type system combines bold display fonts with
                        readable body text for maximum impact and clarity.
                    </p>
                </div>

                <!-- Font Families -->
                <div class="grid md:grid-cols-3 gap-8 mb-16">
                    <!-- Display Font -->
                    <div class="bg-white rounded-lg p-8 shadow-brand">
                        <span
                            class="text-accent font-bold text-xs uppercase tracking-widest mb-4 block"
                            >Display Font</span
                        >
                        <h3
                            class="font-display text-4xl text-primary uppercase mb-4"
                        >
                            Lemon Milk
                        </h3>
                        <p class="text-gray-600 text-sm mb-4">
                            Used for headlines, hero text, and high-impact
                            messaging.
                        </p>
                        <div class="font-display text-primary space-y-1">
                            <p class="text-2xl uppercase">ABCDEFGHIJ</p>
                            <p class="text-2xl uppercase">KLMNOPQRST</p>
                            <p class="text-2xl uppercase">UVWXYZ 1234567890</p>
                        </div>
                        <code class="text-xs text-gray-500 mt-4 block"
                            >font-family: 'Lemon Milk', sans-serif;</code
                        >
                    </div>

                    <!-- Secondary Font -->
                    <div class="bg-white rounded-lg p-8 shadow-brand">
                        <span
                            class="text-accent font-bold text-xs uppercase tracking-widest mb-4 block"
                            >Secondary Font</span
                        >
                        <h3 class="font-secondary text-4xl text-primary mb-4">
                            Outfit
                        </h3>
                        <p class="text-gray-600 text-sm mb-4">
                            Used for subheadings, buttons, labels, and
                            navigation.
                        </p>
                        <div class="font-secondary text-primary space-y-1">
                            <p class="text-2xl">ABCDEFGHIJ</p>
                            <p class="text-2xl">KLMNOPQRST</p>
                            <p class="text-2xl">abcdefghijklmnop</p>
                        </div>
                        <code class="text-xs text-gray-500 mt-4 block"
                            >font-family: 'Outfit', sans-serif;</code
                        >
                    </div>

                    <!-- Body Font -->
                    <div class="bg-white rounded-lg p-8 shadow-brand">
                        <span
                            class="text-accent font-bold text-xs uppercase tracking-widest mb-4 block"
                            >Body Font</span
                        >
                        <h3 class="font-body text-4xl text-primary mb-4">
                            Manrope
                        </h3>
                        <p class="text-gray-600 text-sm mb-4">
                            Used for paragraphs, descriptions, and long-form
                            content.
                        </p>
                        <div class="font-body text-primary space-y-1">
                            <p class="text-2xl">ABCDEFGHIJ</p>
                            <p class="text-2xl">KLMNOPQRST</p>
                            <p class="text-2xl">abcdefghijklmnop</p>
                        </div>
                        <code class="text-xs text-gray-500 mt-4 block"
                            >font-family: 'Manrope', sans-serif;</code
                        >
                    </div>
                </div>

                <!-- Type Scale -->
                <div class="bg-white rounded-lg p-8 shadow-brand">
                    <h3
                        class="text-primary font-bold text-lg uppercase tracking-wide mb-8 border-b-2 border-accent inline-block pb-2"
                    >
                        Type Scale
                    </h3>
                    <div class="space-y-6">
                        <div
                            class="flex flex-col md:flex-row md:items-baseline gap-4 pb-4 border-b border-gray-100"
                        >
                            <span
                                class="text-xs text-gray-400 font-mono w-32 shrink-0"
                                >H1 / Display</span
                            >
                            <div
                                class="text-primary font-display text-4xl md:text-5xl uppercase tracking-wide"
                            >
                                The Heading One
                            </div>
                        </div>

                        <div
                            class="flex flex-col md:flex-row md:items-baseline gap-4 pb-4 border-b border-gray-100"
                        >
                            <span
                                class="text-xs text-gray-400 font-mono w-32 shrink-0"
                                >H2 / Section</span
                            >
                            <h2
                                class="text-primary font-display text-3xl md:text-4xl uppercase"
                            >
                                The Heading Two
                            </h2>
                        </div>

                        <div
                            class="flex flex-col md:flex-row md:items-baseline gap-4 pb-4 border-b border-gray-100"
                        >
                            <span
                                class="text-xs text-gray-400 font-mono w-32 shrink-0"
                                >H3 / Subsection</span
                            >
                            <h3
                                class="text-primary font-secondary text-2xl uppercase"
                            >
                                The Heading Three
                            </h3>
                        </div>

                        <div
                            class="flex flex-col md:flex-row md:items-baseline gap-4 pb-4 border-b border-gray-100"
                        >
                            <span
                                class="text-xs text-gray-400 font-mono w-32 shrink-0"
                                >H4 / Card Title</span
                            >
                            <h4
                                class="text-primary font-secondary text-xl uppercase"
                            >
                                The Heading Four
                            </h4>
                        </div>

                        <div
                            class="flex flex-col md:flex-row md:items-baseline gap-4 pb-4 border-b border-gray-100"
                        >
                            <span
                                class="text-xs text-gray-400 font-mono w-32 shrink-0"
                                >Body</span
                            >
                            <p class="text-gray-600 font-body text-base">
                                The quick brown fox jumps over the lazy dog.
                                This is body text used for paragraphs and
                                general content.
                            </p>
                        </div>

                        <div
                            class="flex flex-col md:flex-row md:items-baseline gap-4"
                        >
                            <span
                                class="text-xs text-gray-400 font-mono w-32 shrink-0"
                                >Caption</span
                            >
                            <p class="text-gray-500 font-body text-sm">
                                Small caption text for labels, metadata, and
                                secondary information.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Components -->

---
/**
 * ProcessTimeline Component
 * Displays a step-by-step process with visual timeline
 */
import Container from "./ui/Container.astro";

interface ProcessStep {
    step: number;
    title: string;
    description: string;
}

interface Props {
    steps: ProcessStep[];
    heading?: string;
    label?: string;
}

const {
    steps,
    heading = "Our Process",
    label = "ðŸ”§ How We Work",
} = Astro.props;
---

<section class="process-section">
    <Container>
        <header class="section-header">
            <span class="section-label">{label}</span>
            <h2 class="section-title">{heading}</h2>
        </header>

        <div class="process-timeline">
            {
                steps.map((step, index) => (
                    <div
                        class="process-step"
                        style={`--delay: ${index * 0.15}s`}
                    >
                        <div class="step-indicator">
                            <div class="step-number-ring">
                                <span class="step-number">{step.step}</span>
                            </div>
                            {index < steps.length - 1 && (
                                <div class="step-connector-line" />
                            )}
                        </div>
                        <div class="step-card">
                            <div class="step-card-accent" />
                            <h3 class="step-title">{step.title}</h3>
                            <p class="step-description">{step.description}</p>
                        </div>
                    </div>
                ))
            }
        </div>
    </Container>
</section>

<style>
    .process-section {
        background: linear-gradient(180deg, #f8fafc 0%, var(--bg-body) 100%);
        padding: clamp(4rem, 8vw, 7rem) 0;
    }

    .section-header {
        text-align: center;
        margin-bottom: clamp(2.5rem, 5vw, 4rem);
    }

    .section-label {
        display: inline-block;
        color: var(--color-accent);
        font-size: clamp(0.8rem, 1vw, 0.9rem);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        margin-bottom: clamp(0.75rem, 1.5vw, 1rem);
        padding: 0.5rem 1rem;
        background: rgba(20, 211, 227, 0.1);
        border-radius: var(--radius-full);
    }

    .section-title {
        font-size: clamp(1.75rem, 4vw, 2.75rem);
        font-weight: 800;
        color: var(--color-primary);
        margin-bottom: 0;
        text-transform: uppercase;
        line-height: 1.15;
    }

    .process-timeline {
        max-width: var(--container-content, 1100px);
        margin: 0 auto;
        position: relative;
    }

    .process-step {
        display: flex;
        gap: clamp(1rem, 2vw, 1.5rem);
        position: relative;
        opacity: 0;
        transform: translateX(-20px);
        animation: slideIn 0.5s forwards;
        animation-delay: var(--delay);
    }

    @keyframes slideIn {
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .step-indicator {
        flex-shrink: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .step-number-ring {
        width: clamp(48px, 6vw, 60px);
        height: clamp(48px, 6vw, 60px);
        background: linear-gradient(
            135deg,
            var(--color-accent) 0%,
            #0ab8c7 100%
        );
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 25px rgba(20, 211, 227, 0.3);
        position: relative;
        z-index: 2;
    }

    .step-number {
        font-family: var(--font-display);
        font-size: clamp(1.25rem, 2vw, 1.5rem);
        font-weight: 800;
        color: white;
    }

    .step-connector-line {
        width: 2px;
        flex-grow: 1;
        min-height: 40px;
        background: linear-gradient(
            180deg,
            var(--color-accent) 0%,
            transparent 100%
        );
        margin: 0.5rem 0;
    }

    .step-card {
        flex-grow: 1;
        background: var(--bg-surface);
        border-radius: var(--radius-xl);
        padding: clamp(1.25rem, 2.5vw, 1.75rem);
        margin-bottom: clamp(1rem, 2vw, 1.5rem);
        border: 1px solid var(--border-light);
        position: relative;
        overflow: hidden;
        transition: all var(--transition-base);
    }

    .step-card:hover {
        border-color: var(--border-focus);
        box-shadow: var(--shadow-brand);
        transform: translateX(8px);
    }

    .step-card-accent {
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 4px;
        background: linear-gradient(
            180deg,
            var(--color-accent) 0%,
            var(--color-primary) 100%
        );
    }

    .step-title {
        font-size: clamp(1.1rem, 1.5vw, 1.25rem);
        font-weight: 800;
        color: var(--color-primary);
        margin-bottom: 0.5rem;
        text-transform: uppercase;
    }

    .step-description {
        font-size: clamp(0.9rem, 1vw, 1rem);
        color: var(--text-body);
        line-height: 1.6;
        margin: 0;
    }
</style>

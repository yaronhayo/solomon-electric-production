---
const { service } = Astro.props;
import { Image } from "astro:assets";
import { Check, ArrowRight } from "lucide-astro";
---

<a
    href={`/services#${service.slug}`}
    class="group bg-[var(--bg-card)] border border-[var(--border-light)] rounded-[var(--radius-xl)] hover:shadow-[var(--shadow-brand)] hover:border-accent/30 transition-all duration-[var(--transition-slow)] relative overflow-hidden block h-full flex flex-col"
>
    <div class="absolute inset-0 bg-gradient-to-br from-accent/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-[var(--transition-slow)]"></div>

    <!-- Service Image Header -->
    {service.image && (
        <div class="relative h-48 overflow-hidden rounded-t-[var(--radius-xl)]">
            <Image
                src={service.image}
                alt={service.name}
                loading="lazy"
                class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-[var(--transition-slow)]"
            />
            <!-- Gradient Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
            
            <!-- Category Badge on Image -->
            <div class="absolute top-4 left-4 z-10">
                <span
                    class={`text-[10px] font-extrabold uppercase tracking-[0.15em] px-4 py-2 glass-bg glass-border rounded-lg ${service.category ===
                    'Commercial & Industrial'
                        ? 'text-white border-white/20'
                        : service.category === 'Panel & Electrical Upgrades' || service.category === 'Emergency & Rapid Response'
                          ? 'text-accent border-accent/20'
                          : 'text-white border-white/20'}`}
                >
                    {service.category}
                </span>
            </div>
        </div>
    )}

    <!-- Card Content -->
    <div class="p-[var(--spacing-lg)] md:p-[var(--spacing-xl)] flex-1 flex flex-col">
        <div class="flex items-start justify-between mb-4">
            <!-- Title -->
            <h3
                class="text-lg md:text-xl font-bold text-[var(--text-primary)] tracking-tight group-hover:text-[var(--color-accent)] transition-colors duration-[var(--transition-base)] leading-tight uppercase font-secondary line-clamp-2"
            >
                {service.name}
            </h3>
            <!-- Icon (Smaller, accent color) -->
            <div class="w-12 h-12 text-accent shrink-0">
                {
                    (() => {
                        const Icon = service.icon;
                        return (
                            <Icon class="w-full h-full object-contain group-hover:scale-110 transition-all duration-[var(--transition-base)] stroke-[1.5]" />
                        );
                    })()
                }
            </div>
        </div>

        <!-- Description -->
        <p
            class="text-[var(--text-body)] mb-6 line-clamp-3 leading-relaxed text-sm md:text-base font-medium flex-grow"
        >
            {service.shortDescription}
        </p>

        <!-- Features List -->
        <ul class="space-y-2.5 mb-6">
            {
                service.features.slice(0, 3).map((feature: string) => (
                    <li class="text-sm text-[var(--text-body)] flex items-start font-medium">
                        <Check class="w-[var(--icon-sm)] h-[var(--icon-sm)] text-accent mr-2.5 mt-0.5 flex-shrink-0" />
                        <span class="flex-1">{feature}</span>
                    </li>
                ))
            }
        </ul>

        <div class="mt-auto pt-4 border-t border-[var(--border-light)]">
            <span
                class="inline-flex items-center text-accent font-bold uppercase tracking-widest text-sm group-hover:translate-x-2 transition-transform duration-[var(--transition-base)]"
            >
                Learn More
                <ArrowRight class="w-[var(--icon-sm)] h-[var(--icon-sm)] ml-2" />
            </span>
        </div>
    </div>

    <!-- Hover Glow Effect -->
    <div
        class="absolute top-0 right-0 w-32 h-32 bg-accent/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 group-hover:bg-accent/10 transition-all duration-[var(--transition-slow)] pointer-events-none"
    >
    </div>
</a>

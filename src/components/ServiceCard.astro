---
const { service } = Astro.props;
import { Image } from "astro:assets";
---

<a
    href="/contact"
    class="group bg-white rounded-2xl hover:shadow-2xl transition-all duration-500 relative overflow-hidden block h-full flex flex-col"
    style="box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);"
>
    <!-- Service Image Header -->
    {service.image && (
        <div class="relative h-48 overflow-hidden rounded-t-2xl">
            <Image
                src={service.image}
                alt={service.name}
                class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
            />
            <!-- Gradient Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
            
            <!-- Category Badge on Image -->
            <div class="absolute top-4 left-4">
                <span
                    class="text-xs font-bold uppercase tracking-widest px-3 py-1.5 rounded-full backdrop-blur-md {service.category ===
                    'Commercial & Industrial'
                        ? 'bg-primary/90 text-white'
                        : service.category === 'Panel & Electrical Upgrades' || service.category === 'Emergency & Rapid Response'
                          ? 'bg-accent/90 text-white'
                          : 'bg-white/90 text-primary'}"
                >
                    {service.category}
                </span>
            </div>
        </div>
    )}

    <!-- Card Content -->
    <div class="p-6 md:p-8 flex-1 flex flex-col">
        <!-- Icon (Smaller, accent color) -->
        <div class="w-12 h-12 mb-4 text-accent flex-shrink-0">
            {
                (() => {
                    const Icon = service.icon;
                    return (
                        <Icon class="w-full h-full object-contain group-hover:scale-110 transition-all duration-300 stroke-[1.5]" />
                    );
                })()
            }
        </div>

        <!-- Title -->
        <h3
            class="text-lg md:text-xl font-black text-primary mb-4 tracking-tight group-hover:text-accent transition-colors leading-tight uppercase font-display line-clamp-2"
        >
            {service.name}
        </h3>

        <!-- Description -->
        <p
            class="text-gray-600 mb-6 line-clamp-3 leading-relaxed text-sm md:text-base font-medium flex-grow"
        >
            {service.shortDescription}
        </p>

        <!-- Features List -->
        <ul class="space-y-2.5 mb-6">
            {
                service.features.slice(0, 3).map((feature: string) => (
                    <li class="text-sm text-gray-600 flex items-start font-medium">
                        <svg class="w-5 h-5 text-accent mr-2.5 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        <span class="flex-1">{feature}</span>
                    </li>
                ))
            }
        </ul>

        <!-- CTA -->
        <div class="mt-auto pt-4 border-t border-gray-100">
            <span
                class="inline-flex items-center text-accent font-bold uppercase tracking-widest text-sm group-hover:translate-x-2 transition-transform duration-300"
            >
                Get Free Quote
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
            </span>
        </div>
    </div>

    <!-- Hover Glow Effect -->
    <div
        class="absolute top-0 right-0 w-32 h-32 bg-accent/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 group-hover:bg-accent/10 transition-all duration-500 pointer-events-none"
    >
    </div>
</a>

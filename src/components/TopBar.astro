---
// TopBar.astro - Utility bar above main header
import Container from "./ui/Container.astro";

// isDark prop available for future theming but not currently used
const { isDark: _isDark = false } = Astro.props;
---

<div
    class="topbar-dark py-2 hidden md:block border-b border-white/5 relative z-[100]"
>
    <Container>
        <div
            class="flex justify-end items-center gap-8 text-[10px] font-secondary tracking-[0.2em] uppercase"
        >
            <!-- Service Area -->
            <span class="flex items-center gap-2 text-white/70">
                <svg
                    class="w-3 h-3 text-accent"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span class="font-bold">Miami-Dade • Broward • Palm Beach</span>
            </span>
            <!-- 24/7 Emergency Service -->
            <span class="flex items-center gap-2">
                <svg
                    class="w-3 h-3 text-accent"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="text-accent font-black shimmer-authority"
                    >24/7 Emergency Service</span
                >
            </span>
        </div>
    </Container>
</div>

<style>
    .topbar-dark {
        background-color: #0e4380 !important;
    }
</style>

---
import { Image } from "astro:assets";
import { ArrowRight } from "lucide-astro";
import type { CollectionEntry } from "astro:content";
import { formatDate, calculateReadingTime } from "../utils/blog";

interface Props {
    post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const readingTime = post.body ? calculateReadingTime(post.body) : 5;
---

<a
    href={`/blog/${post.slug}`}
    class="group bg-[var(--bg-surface)] border border-[var(--border-light)] rounded-[var(--radius-xl)] hover:border-[var(--border-focus)] hover:shadow-[var(--shadow-brand)] transition-all duration-[var(--transition-slow)] overflow-hidden block shadow-[var(--shadow-sm)]"
>
    <!-- Featured Image -->
    {
        post.data.image && (
            <div
                class="relative overflow-hidden bg-[var(--bg-surface-hover)]"
                style="aspect-ratio: 16/9;"
            >
                <Image
                    src={post.data.image}
                    alt={
                        post.data.imageAlt ||
                        `${post.data.title} - electrical tips from Solomon Electric Miami`
                    }
                    width={600}
                    height={338}
                    loading="lazy"
                    format="avif"
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-[var(--transition-slow)]"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-[var(--transition-base)]" />

                {post.data.featured && (
                    <span class="absolute top-4 left-4 bg-accent text-white text-[length:var(--text-caption)] font-bold uppercase tracking-widest px-3 py-1 rounded-[var(--radius-full)] shadow-[var(--shadow-sm)]">
                        Featured
                    </span>
                )}
            </div>
        )
    }

    <div class="p-[var(--spacing-lg)] md:p-[var(--spacing-xl)]">
        <div class="flex items-center justify-between mb-4">
            <div
                class="flex items-center gap-[var(--gap-md)] mb-4 text-[length:var(--text-caption)] text-[var(--clr-muted)] font-bold uppercase tracking-wider"
            >
                <span class="text-primary">{post.data.category}</span>
                <span>â€¢</span>
                <span>{readingTime} min read</span>
            </div>
        </div>

        <!-- Title -->
        <h3
            class="text-[length:var(--text-h5)] md:text-[length:var(--text-h4)] font-black text-primary mb-3 tracking-tight group-hover:text-accent transition-colors duration-[var(--transition-base)] line-clamp-2 uppercase font-secondary"
        >
            {post.data.title}
        </h3>

        <!-- Excerpt -->
        <p
            class="text-[var(--clr-body)] mb-6 line-clamp-3 leading-relaxed font-medium"
        >
            {post.data.excerpt || post.data.description}
        </p>

        <!-- Meta Info -->
        <div
            class="flex items-center justify-between text-[length:var(--text-label)]"
        >
            <span class="text-[var(--clr-muted)] font-medium">
                {formatDate(post.data.pubDate)}
            </span>
            <span
                class="text-primary font-bold uppercase tracking-widest group-hover:translate-x-2 transition-transform duration-[var(--transition-base)] flex items-center"
            >
                Read More <ArrowRight class="w-4 h-4 ml-2" />
            </span>
        </div>
    </div>
</a>

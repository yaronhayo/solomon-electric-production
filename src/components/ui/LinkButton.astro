---
// src/components/ui/LinkButton.astro
interface Props {
    href: string;
    class?: string;
    [x: string]: any;
}

const { href, class: className = "", ...rest } = Astro.props;

// Design:
// Font: Manrope Regular (400) 16px
// Color: Cyan (#14D3E3) -> Blue (#0D4380) on hover
// Decoration: Underline
---

<a
    href={href}
    class={`
    inline-flex items-center gap-2
    font-manrope font-normal text-[16px] leading-[22px]
    text-accent hover:text-primary
    underline underline-offset-4
    transition-colors duration-300
    ${className}
  `}
    {...rest}
>
    <slot />
</a>

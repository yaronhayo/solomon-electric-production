---
import { Image } from "astro:assets";
import { SITE_CONFIG } from "../config/site";
import Container from "./ui/Container.astro";
// Ideally we would import specific trust badge images here if we knew their filenames.
// Attempting to use a placeholder image structure or SVGs for the badges.

const currentYear = new Date().getFullYear();
---

<footer
    class="bg-primary pt-16 pb-12 overflow-hidden relative border-t-4 border-accent"
>
    <Container>
        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 text-white"
        >
            <!-- Column 1: Contact Info -->
            <div class="flex flex-col gap-6">
                <div class="w-[200px]">
                    <!-- Using text logo if image not perfect match yet, or the white logo placeholder -->
                    <!-- The user image shows "SOLOMON ELECTRIC" in white with a lightning bolt logo -->
                    <a href="/" class="block">
                        <div class="flex items-center gap-2">
                            <span class="text-accent text-4xl">‚ö°</span>
                            <div class="flex flex-col">
                                <span
                                    class="font-lemon text-xl leading-none tracking-widest text-white"
                                    >SOLOMON</span
                                >
                                <span
                                    class="font-lemon text-xl leading-none tracking-widest text-white"
                                    >ELECTRIC</span
                                >
                            </div>
                        </div>
                    </a>
                </div>

                <div>
                    <h3 class="font-manrope text-2xl font-medium mb-4">
                        Contact Us
                    </h3>
                    <div class="flex flex-col gap-4">
                        <a
                            href={SITE_CONFIG.contact.phone.href}
                            class="flex items-center gap-3 group hover:text-accent transition-colors"
                        >
                            <span class="text-white text-lg">üìû</span>
                            <span class="font-manrope text-base"
                                >{SITE_CONFIG.contact.phone.formatted}</span
                            >
                        </a>
                        <a
                            href={`mailto:${SITE_CONFIG.contact.email.support}`}
                            class="flex items-center gap-3 group hover:text-accent transition-colors"
                        >
                            <span class="text-white text-lg">‚úâÔ∏è</span>
                            <span class="font-manrope text-base"
                                >{SITE_CONFIG.contact.email.support}</span
                            >
                        </a>
                        <div class="flex items-start gap-3">
                            <span class="text-white text-lg mt-1">üìç</span>
                            <span class="font-manrope text-base max-w-[200px]"
                                >{SITE_CONFIG.contact.address.full}</span
                            >
                        </div>
                    </div>
                </div>

                <!-- Social Icons -->
                <div class="flex gap-4 mt-2">
                    <a
                        href={SITE_CONFIG.social.facebook}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="w-8 h-8 flex items-center justify-center bg-white rounded-full text-primary hover:bg-accent hover:text-white transition-all"
                    >
                        <span class="sr-only">Facebook</span>
                        <svg
                            class="w-4 h-4"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"
                            ></path></svg
                        >
                    </a>
                    <a
                        href={SITE_CONFIG.social.instagram}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="w-8 h-8 flex items-center justify-center bg-white rounded-full text-primary hover:bg-accent hover:text-white transition-all"
                    >
                        <span class="sr-only">Instagram</span>
                        <svg
                            class="w-4 h-4"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.689-.073-4.948-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                            ></path></svg
                        >
                    </a>
                    <a
                        href={SITE_CONFIG.social.yelp}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="w-8 h-8 flex items-center justify-center bg-white rounded-full text-primary hover:bg-accent hover:text-white transition-all"
                    >
                        <span class="sr-only">Yelp</span>
                        <svg
                            class="w-4 h-4"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 22c-5.523 0-10-4.477-10-10S6.477 2 12 2s10 4.477 10 10-4.477 10-10 10z"
                            ></path></svg
                        >
                    </a>
                    <a
                        href={SITE_CONFIG.social.googleMaps}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="w-8 h-8 flex items-center justify-center bg-white rounded-full text-primary hover:bg-accent hover:text-white transition-all"
                    >
                        <span class="sr-only">Google Maps</span>
                        <svg
                            class="w-4 h-4"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"
                            ></path></svg
                        >
                    </a>
                </div>
            </div>

            <!-- Column 2: Links -->
            <div>
                <h3 class="font-manrope text-2xl font-medium mb-6">Links</h3>
                <ul class="flex flex-col gap-4">
                    <li>
                        <a
                            href="/"
                            class="text-gray-300 hover:text-accent hover:pl-2 transition-all block"
                            >Home</a
                        >
                    </li>
                    <li>
                        <a
                            href="/about"
                            class="text-gray-300 hover:text-accent hover:pl-2 transition-all block"
                            >About Us</a
                        >
                    </li>
                    <li>
                        <a
                            href="/services"
                            class="text-gray-300 hover:text-accent hover:pl-2 transition-all block"
                            >Services</a
                        >
                    </li>
                    <li>
                        <a
                            href="/service-areas"
                            class="text-gray-300 hover:text-accent hover:pl-2 transition-all block"
                            >Service Areas</a
                        >
                    </li>
                    <li>
                        <a
                            href="/faq"
                            class="text-gray-300 hover:text-accent hover:pl-2 transition-all block"
                            >FAQ</a
                        >
                    </li>
                    <li>
                        <a
                            href="/reviews"
                            class="text-gray-300 hover:text-accent hover:pl-2 transition-all block"
                            >Reviews</a
                        >
                    </li>
                    <li>
                        <a
                            href="/about"
                            class="text-gray-300 hover:text-accent hover:pl-2 transition-all block"
                            >About</a
                        >
                    </li>
                    <li>
                        <a
                            href="/blog"
                            class="text-gray-300 hover:text-accent hover:pl-2 transition-all block"
                            >Blog</a
                        >
                    </li>
                    <li>
                        <a
                            href="/book"
                            class="text-gray-300 hover:text-accent hover:pl-2 transition-all block"
                            >Book Online</a
                        >
                    </li>
                </ul>
            </div>

            <!-- Column 3: Hours -->
            <div>
                <h3 class="font-manrope text-2xl font-medium mb-6">
                    We're Here 24/7!
                </h3>
                <ul class="flex flex-col gap-3">
                    <li
                        class="flex justify-between items-center text-gray-300 border-b border-white/10 pb-2"
                    >
                        <span>Monday</span>
                        <span class="text-accent font-medium"
                            >Open 24 Hours</span
                        >
                    </li>
                    <li
                        class="flex justify-between items-center text-gray-300 border-b border-white/10 pb-2"
                    >
                        <span>Tuesday</span>
                        <span class="text-accent font-medium"
                            >Open 24 Hours</span
                        >
                    </li>
                    <li
                        class="flex justify-between items-center text-gray-300 border-b border-white/10 pb-2"
                    >
                        <span>Wednesday</span>
                        <span class="text-accent font-medium"
                            >Open 24 Hours</span
                        >
                    </li>
                    <li
                        class="flex justify-between items-center text-gray-300 border-b border-white/10 pb-2"
                    >
                        <span>Thursday</span>
                        <span class="text-accent font-medium"
                            >Open 24 Hours</span
                        >
                    </li>
                    <li
                        class="flex justify-between items-center text-gray-300 border-b border-white/10 pb-2"
                    >
                        <span>Friday</span>
                        <span class="text-accent font-medium"
                            >Open 24 Hours</span
                        >
                    </li>
                    <li
                        class="flex justify-between items-center text-gray-300 border-b border-white/10 pb-2"
                    >
                        <span>Saturday</span>
                        <span class="text-accent font-medium"
                            >Open 24 Hours</span
                        >
                    </li>
                    <li
                        class="flex justify-between items-center text-gray-300 border-b border-white/10 pb-2"
                    >
                        <span>Sunday</span>
                        <span class="text-accent font-medium"
                            >Open 24 Hours</span
                        >
                    </li>
                </ul>
            </div>

            <!-- Column 4: Trust -->
            <div>
                <h3 class="font-manrope text-2xl font-medium mb-6">
                    You can trust us
                </h3>
                <div class="flex flex-col gap-8">
                    <div class="flex items-center gap-3">
                        <div
                            class="w-10 h-10 border-2 border-accent rounded-full flex items-center justify-center shrink-0"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 24 24"
                                fill="currentColor"
                                class="w-5 h-5 text-accent"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M19.916 4.626a.75.75 0 01.208 1.04l-9 13.5a.75.75 0 01-1.154.114l-6-6a.75.75 0 011.06-1.06l5.353 5.353 8.493-12.739a.75.75 0 011.04-.208z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <div>
                            <span class="block font-manrope font-bold text-lg"
                                >Florida License:</span
                            >
                            <span
                                class="block font-manrope text-base text-gray-300"
                                >#{SITE_CONFIG.credentials.license.number}</span
                            >
                        </div>
                    </div>

                    <!-- Trust Badges Row -->
                    <div class="flex items-center gap-4 flex-wrap">
                        <!-- Placeholders for badges: Google, Angi, HomeAdvisor, BBB, Yelp -->
                        <div
                            class="w-12 h-12 bg-white/10 rounded-full flex items-center justify-center text-xs text-center p-1 hover:bg-white/20 transition-colors cursor-default"
                            title="Google Guarantee"
                        >
                            Google
                        </div>
                        <div
                            class="w-12 h-12 bg-white/10 rounded-full flex items-center justify-center text-xs text-center p-1 hover:bg-white/20 transition-colors cursor-default"
                            title="Angi"
                        >
                            Angi
                        </div>
                        <div
                            class="w-12 h-12 bg-white/10 rounded-full flex items-center justify-center text-xs text-center p-1 hover:bg-white/20 transition-colors cursor-default"
                            title="HomeAdvisor"
                        >
                            Home
                        </div>
                        <div
                            class="w-12 h-12 bg-white/10 rounded-full flex items-center justify-center text-xs text-center p-1 hover:bg-white/20 transition-colors cursor-default"
                            title="BBB"
                        >
                            BBB
                        </div>
                        <div
                            class="w-12 h-12 bg-white/10 rounded-full flex items-center justify-center text-xs text-center p-1 hover:bg-white/20 transition-colors cursor-default"
                            title="Yelp"
                        >
                            Yelp
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Copyright -->
        <div class="border-t border-white/10 mt-12 pt-8 text-center">
            <p class="text-gray-400 text-sm">
                &copy; {currentYear} Solomon Electric. All rights reserved.
            </p>
        </div>
    </Container>
</footer>

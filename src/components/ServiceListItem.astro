---
/**
 * ServiceListItem.astro
 * Compact service item for list display - optimized for quick scanning and conversions
 */
interface Props {
    service: {
        name: string;
        slug: string;
        shortDescription?: string;
    };
    showDescription?: boolean;
}

const { service, showDescription = false } = Astro.props;
---

<a
    href={`/services/${service.slug}`}
    class="service-list-item group flex items-center justify-between py-3 sm:py-4 px-3 sm:px-4 -mx-3 sm:-mx-4 rounded-lg hover:bg-accent/5 transition-colors duration-200"
>
    <div class="flex-1 min-w-0 pr-2">
        <h3
            class="text-sm sm:text-base md:text-lg font-bold text-[var(--text-primary)] group-hover:text-accent transition-colors leading-snug"
        >
            {service.name}
        </h3>
        {
            showDescription && service.shortDescription && (
                <p class="text-xs sm:text-sm text-[var(--text-muted)] mt-1 line-clamp-1 leading-relaxed">
                    {service.shortDescription}
                </p>
            )
        }
    </div>
    <div class="flex items-center gap-2 sm:gap-3 shrink-0">
        <span
            class="hidden md:inline-flex text-xs font-bold uppercase tracking-wider text-accent opacity-0 group-hover:opacity-100 transition-opacity"
        >
            Learn More
        </span>
        <svg
            class="w-4 h-4 sm:w-5 sm:h-5 text-accent transform group-hover:translate-x-1 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
        </svg>
    </div>
</a>

<style>
    .service-list-item {
        border-bottom: 1px solid var(--border-light);
    }
    .service-list-item:last-child {
        border-bottom: none;
    }
    /* In grid layout, ensure consistent bottom borders */
    @media (min-width: 1024px) {
        .service-list-item {
            border-bottom: 1px solid var(--border-light);
        }
    }
</style>

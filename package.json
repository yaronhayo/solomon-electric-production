  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/sitemap": "^3.6.0",
    "@fontsource/manrope": "^5.2.8",
    "@fontsource/outfit": "^5.2.8",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.16.5",
    "dotenv": "^16.4.7",
    "googleapis": "^144.0.0",
    "lucide-astro": "^0.556.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@types/node": "^25.0.3",
    "basic-ftp": "^5.1.0",
    "html-validate": "^10.5.0",
    "vitest": "^2.1.8"
  }

{
  "name": "solomon-electric",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "NODE_OPTIONS='--max-old-space-size=8192' astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "npm run test:unit && npm run test:build",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:build": "astro build",
    "check": "astro check",
    "gsc": "node scripts/gsc-client.js",
    "verify-redirects": "node scripts/verify-redirects.js",
    "seo:submit-sitemap": "node scripts/gsc-client.js submit-sitemap",
    "seo:performance": "node scripts/gsc-client.js performance",
    "seo:sitemaps": "node scripts/gsc-client.js sitemaps",
    "seo:validate": "node scripts/seo-validate.js",
    "seo:unified": "node scripts/seo-orchestrator.js",
    "seo:gaps": "node scripts/seo-orchestrator.js gaps",
    "gsc:batch-inspect": "node scripts/gsc-client.js batch-inspect",
    "gsc:local-queries": "node scripts/gsc-client.js local-queries",
    "gsc:rich-results": "node scripts/gsc-client.js rich-results",
    "gsc:health": "node scripts/gsc-client.js indexing-health",
    "indexnow:submit": "node scripts/indexnow.js",
    "indexnow:sitemap": "node scripts/indexnow.js sitemap",
    "indexnow:auto": "npm run build && npm run indexnow:sitemap",
    "postbuild": "node scripts/gsc-post-build.js",
    "perf:audit": "node scripts/pagespeed-audit.js",
    "perf:audit:desktop": "node scripts/pagespeed-audit.js --desktop",
    "perf:audit:both": "node scripts/pagespeed-audit.js --both",
    "validate:html": "html-validate \"dist/**/*.html\"",
    "check:compliance": "npm run validate:html",
